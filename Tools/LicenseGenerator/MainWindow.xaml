<Window x:Class="LicenseGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ColorVision 许可证生成工具" Height="500" Width="700" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="ColorVision 许可证生成工具" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center"/>

        <!-- 当前机器信息 -->
        <GroupBox Grid.Row="2" Header="当前机器信息" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="机器名称:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="2" x:Name="txtMachineName" IsReadOnly="True" Background="#F0F0F0"/>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Text="机器码:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="2" x:Name="txtCurrentMachineCode" IsReadOnly="True" Background="#F0F0F0"/>
                <Button Grid.Row="2" Grid.Column="4" Content="复制" Width="60" Click="CopyCurrentMachineCode_Click"/>
            </Grid>
        </GroupBox>

        <!-- 许可证生成 -->
        <GroupBox Grid.Row="4" Header="许可证生成" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="机器码:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="2" x:Name="txtInputMachineCode" 
                         ToolTip="输入要生成许可证的机器码" TextChanged="TxtInputMachineCode_TextChanged"/>
                <Button Grid.Row="0" Grid.Column="4" Content="使用当前" Width="80" Click="UseCurrentMachineCode_Click"/>

                <Button Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Content="生成许可证" 
                        Height="35" FontSize="14" FontWeight="Bold" Click="GenerateLicense_Click"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="许可证:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="2" x:Name="txtLicense" IsReadOnly="True" 
                         Background="#F0F0F0" ToolTip="生成的许可证"/>
                <StackPanel Grid.Row="4" Grid.Column="4" Orientation="Horizontal">
                    <Button Content="复制" Width="60" Margin="0,0,5,0" Click="CopyLicense_Click"/>
                    <Button Content="保存" Width="60" Click="SaveLicense_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 状态信息 -->
        <GroupBox Grid.Row="6" Header="状态信息" Padding="10">
            <TextBlock x:Name="txtStatus" Text="就绪" TextWrapping="Wrap" Foreground="Green"/>
        </GroupBox>
    </Grid>
</Window>
