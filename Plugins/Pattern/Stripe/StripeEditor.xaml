<UserControl x:Class="Pattern.Stripe.StripeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pattern.Stripe"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:PatternStripeConfig}"
             d:DesignHeight="450" d:DesignWidth="300" Initialized="UserControl_Initialized">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                <Button Content="背景色" Width="55" Margin="0,0,5,0" Click="BtnPickMainColor_Click"/>
                <Rectangle x:Name="rectMainColor" Width="25" Height="25" Stroke="Black" Fill="{Binding MainBrush}" Margin="0,0,5,0"/>
                <Button Content="R" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="R" />
                <Button Content="G" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="G"/>
                <Button Content="B" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="B"/>
                <Button Content="W" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="W"/>
                <Button Content="K" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="K"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="前景色" Width="55" Margin="0,0,5,0" Click="BtnPickAltColor_Click"/>
                <Rectangle x:Name="rectAltColor" Width="25" Height="25" Stroke="Black" Fill="{Binding AltBrush}" Margin="0,0,5,0"/>
                <Button Content="R" Margin="0,0,5,0" Click="BtnPickAltColorSet_Click"  Tag="R"/>
                <Button Content="G" Margin="0,0,5,0" Click="BtnPickAltColorSet_Click"  Tag="G"/>
                <Button Content="B" Margin="0,0,5,0" Click="BtnPickAltColorSet_Click"  Tag="B"/>
                <Button Content="W" Margin="0,0,5,0" Click="BtnPickAltColorSet_Click"  Tag="W"/>
                <Button Content="K" Margin="0,0,5,0" Click="BtnPickAltColorSet_Click"  Tag="K"/>
            </StackPanel>
            
            <ToggleButton  Style="{StaticResource ToggleButtonSwitch}" Content="IsHorizontal" Margin="0,0,2,0" IsChecked="{Binding IsHorizontal}" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5" Visibility="{Binding IsHorizontal ,Converter={StaticResource bool2VisibilityConverter}}">
                <TextBlock Width="45" Text="Period" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding HorizontalSpacing}" Margin="0,0,5,0"/>
                <TextBlock Width="80" Text="LineThickness" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding HorizontalWidth}" Margin="0,0,5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5"  Visibility="{Binding IsHorizontal ,Converter={StaticResource bool2VisibilityConverter1}}">
                <TextBlock Width="45" Text="Period" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding VerticalSpacing}" Margin="0,0,5,0"/>
                <TextBlock Width="80" Text="LineThickness" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding VerticalWidth}" Margin="0,0,5,0"/>
            </StackPanel>
            <StackPanel  Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="FieldOfView" Margin="0,0,5,0"/>
                <TextBox  Width="100" Text="{Binding FieldOfViewX}" Margin="0,0,5,0"/>
                <TextBox  Width="100" Text="{Binding FieldOfViewY}" Margin="0,0,5,0"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
