<Window x:Class="Pattern.ImageProjector.FullscreenImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pattern.ImageProjector"
        mc:Ignorable="d"
        Title="FullscreenImageWindow" 
        WindowStyle="None" 
        AllowsTransparency="False"
        Background="Black"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown">
    <Grid>
        <Image x:Name="FullscreenImage" Stretch="Uniform" StretchDirection="Both"/>
        <TextBlock x:Name="HintText" 
                   Text="Press ESC to close" 
                   Foreground="White" 
                   FontSize="14"
                   Opacity="0.5"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Bottom" 
                   Margin="0,0,20,20"/>
    </Grid>
</Window>
