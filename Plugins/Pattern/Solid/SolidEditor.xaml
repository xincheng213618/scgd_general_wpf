<UserControl x:Class="Pattern.Solid.SolidEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pattern.Solid"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:PatternSolodConfig}"
             d:DesignHeight="100" d:DesignWidth="300" Initialized="UserControl_Initialized">
    <Grid>
        <StackPanel x:Name="StackPanelInfo" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="背景色" Width="55" Margin="0,0,5,0" Click="BtnPickMainColor_Click"/>
                <Rectangle x:Name="rectMainColor" Width="25" Height="25" Stroke="Black" Fill="{Binding MainBrush}" Margin="0,0,5,0" ButtonBase.Click="BtnPickMainColor_Click"/>
                <Button Content="R" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="R" />
                <Button Content="G" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="G"/>
                <Button Content="B" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="B"/>
                <Button Content="W" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="W"/>
                <Button Content="K" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="K"/>
            </StackPanel>
            <ComboBox x:Name="cmbSizeMode" SelectedValue="{Binding SizeMode}" DisplayMemberPath="Key" SelectedValuePath="Value" SelectionChanged="cmbSizeMode_SelectionChanged" Margin="0,0,0,5"/>
            <StackPanel x:Name="PixelStack" Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="像素尺寸" Width="55" Margin="0,0,5,0"/>
                <TextBox Width="100" Text="{Binding PixelWidth}" Margin="0,0,5,0"/>
                <TextBox Width="100" Text="{Binding PixelHeight}" Margin="0,0,5,0"/>
            </StackPanel>
            <StackPanel x:Name="FieldOfViewStack" Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="视场系数" Width="55" Margin="0,0,5,0"/>
                <TextBox Width="100" Text="{Binding FieldOfViewX}" Margin="0,0,5,0"/>
                <TextBox Width="100" Text="{Binding FieldOfViewY}" Margin="0,0,5,0"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
