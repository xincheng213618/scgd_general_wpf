<UserControl x:Class="Pattern.Noise.NoiseEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pattern.Noise"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:PatternNoiseConfig}"
             d:DesignHeight="450" d:DesignWidth="300" Initialized="UserControl_Initialized">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="噪声类型" Width="80" Margin="0,0,5,0"/>
                <ComboBox x:Name="cmbNoiseType" Width="150" SelectedValue="{Binding NoiseType}" DisplayMemberPath="Key" SelectedValuePath="Value" SelectionChanged="cmbNoiseType_SelectionChanged" Margin="0,0,5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="背景色" Width="80" Margin="0,0,5,0" Click="BtnPickBackgroundColor_Click"/>
                <Rectangle x:Name="rectBackgroundColor" Width="25" Height="25" Stroke="Black" Fill="{Binding BackgroundBrush}" Margin="0,0,5,0"/>
                <Button Content="R" Margin="0,0,5,0" Click="BtnPickBackgroundColorSet_Click" Tag="R"/>
                <Button Content="G" Margin="0,0,5,0" Click="BtnPickBackgroundColorSet_Click" Tag="G"/>
                <Button Content="B" Margin="0,0,5,0" Click="BtnPickBackgroundColorSet_Click" Tag="B"/>
                <Button Content="W" Margin="0,0,5,0" Click="BtnPickBackgroundColorSet_Click" Tag="W"/>
                <Button Content="K" Margin="0,0,5,0" Click="BtnPickBackgroundColorSet_Click" Tag="K"/>
            </StackPanel>

            <StackPanel x:Name="NoiseColorPanel" Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="噪声色" Width="80" Margin="0,0,5,0" Click="BtnPickNoiseColor_Click"/>
                <Rectangle x:Name="rectNoiseColor" Width="25" Height="25" Stroke="Black" Fill="{Binding NoiseBrush}" Margin="0,0,5,0"/>
                <Button Content="R" Margin="0,0,5,0" Click="BtnPickNoiseColorSet_Click" Tag="R"/>
                <Button Content="G" Margin="0,0,5,0" Click="BtnPickNoiseColorSet_Click" Tag="G"/>
                <Button Content="B" Margin="0,0,5,0" Click="BtnPickNoiseColorSet_Click" Tag="B"/>
                <Button Content="W" Margin="0,0,5,0" Click="BtnPickNoiseColorSet_Click" Tag="W"/>
                <Button Content="K" Margin="0,0,5,0" Click="BtnPickNoiseColorSet_Click" Tag="K"/>
            </StackPanel>

            <StackPanel x:Name="IntensityPanel" Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="噪声强度" Width="80" Margin="0,0,5,0"/>
                <TextBox Width="150" Text="{Binding Intensity}" Margin="0,0,5,0"/>
            </StackPanel>

            <StackPanel x:Name="DensityPanel" Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="噪声密度" Width="80" Margin="0,0,5,0"/>
                <TextBox Width="150" Text="{Binding Density}" Margin="0,0,5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="随机种子" Width="80" Margin="0,0,5,0"/>
                <TextBox Width="150" Text="{Binding RandomSeed}" Margin="0,0,5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="尺寸模式" Width="80" Margin="0,0,5,0"/>
                <ComboBox x:Name="cmbSizeMode" Width="150" SelectedValue="{Binding SizeMode}" DisplayMemberPath="Key" SelectedValuePath="Value" SelectionChanged="cmbSizeMode_SelectionChanged" Margin="0,0,5,0"/>
            </StackPanel>

            <StackPanel x:Name="PixelStack" Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="像素尺寸" Width="80" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding PixelWidth}" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding PixelHeight}" Margin="0,0,5,0"/>
            </StackPanel>

            <StackPanel x:Name="FieldOfViewStack" Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="视场系数" Width="80" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding FieldOfViewX}" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding FieldOfViewY}" Margin="0,0,5,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
