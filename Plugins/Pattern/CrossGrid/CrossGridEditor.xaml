<UserControl x:Class="ColorVision.Engine.Pattern.CrossGrid.CrossGridEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorVision.Engine.Pattern.CrossGrid"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:PatternCrossGridConfig}"
             d:DesignHeight="450" d:DesignWidth="300" Initialized="UserControl_Initialized">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                <Button Content="主色" Width="55" Margin="0,0,5,0" Click="BtnPickMainColor_Click"/>
                <Rectangle x:Name="rectMainColor" Width="25" Height="25" Stroke="Black" Fill="{Binding LineBrush}" Margin="0,0,5,0"/>
                <Button Content="R" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="R" />
                <Button Content="G" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="G"/>
                <Button Content="B" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="B"/>
                <Button Content="W" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="W"/>
                <Button Content="K" Margin="0,0,5,0" Click="BtnPickMainColorSet_Click"  Tag="K"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="副色" Width="55" Margin="0,0,5,0" Click="BtnPickAltColor_Click"/>
                <Rectangle x:Name="rectAltColor" Width="25" Height="25" Stroke="Black" Fill="{Binding BackgroundBrush}" Margin="0,0,5,0"/>
                <Button Content="R" Margin="0,0,5,0" Click="BtnPickAltColorSet_Click"  Tag="R"/>
                <Button Content="G" Margin="0,0,5,0" Click="BtnPickAltColorSet_Click"  Tag="G"/>
                <Button Content="B" Margin="0,0,5,0" Click="BtnPickAltColorSet_Click"  Tag="B"/>
                <Button Content="W" Margin="0,0,5,0" Click="BtnPickAltColorSet_Click"  Tag="W"/>
                <Button Content="K" Margin="0,0,5,0" Click="BtnPickAltColorSet_Click"  Tag="K"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Width="140" Text="NumLinesHorizontal" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding NumLinesHorizontal}" Margin="0,0,5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Width="140" Text="NumLinesVertical" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding NumLinesVertical}" Margin="0,0,5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Width="140" Text="SpacingHorizontal" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding SpacingHorizontal}" Margin="0,0,5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Width="140" Text="SpacingVertical" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding SpacingVertical}" Margin="0,0,5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Width="140" Text="HorizontalLineWidth" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding HorizontalLineWidth}" Margin="0,0,5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Width="140" Text="VerticalLineWidth" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding VerticalLineWidth}" Margin="0,0,5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Width="140" Text="AddEdgeLines" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding AddEdgeLines}" Margin="0,0,5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Width="140" Text="EdgeOffsetPx" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding EdgeOffsetPx}" Margin="0,0,5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Width="140" Text="EdgeThickness" Margin="0,0,5,0"/>
                <TextBox Width="70" Text="{Binding EdgeThickness}" Margin="0,0,5,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Width="140" Text="DuplicateHorizontally" Margin="0,0,5,0"/>
                <CheckBox Width="70" IsChecked="{Binding DuplicateHorizontally}" Margin="0,0,5,0"/>
            </StackPanel>
            
        </StackPanel>

    </Grid>
</UserControl>
