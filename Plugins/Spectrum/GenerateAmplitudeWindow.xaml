<Window x:Class="Spectrum.GenerateAmplitudeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spectrum"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:SpectrometerManager}"
        Title="生成幅值标定文件" Height="400" Width="500"  Background="{DynamicResource GlobalBackground}"  Initialized="Window_Initialized">
    <Window.Resources>
        <Style TargetType="TextBlock" >
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <DockPanel Margin="0,0,0,10">
                <Button  DockPanel.Dock="Right" Content="选择" Margin="5,0,0,0"  Command="{Binding SetCSFileCommand}"/>
                <TextBlock Text="标准光源绝对光谱文件" VerticalAlignment="Center"  MinWidth="150"/>
                <TextBox Text="{Binding CSFile}" />
            </DockPanel>

            <DockPanel Margin="0,0,0,10">
                <Button  DockPanel.Dock="Right" Content="选择" Margin="5,0,0,0"  Command="{Binding SetMaguideFileCommand}"/>
                <TextBlock Text="幅值标定文件保存路径" VerticalAlignment="Center"  MinWidth="150"/>
                <TextBox Text="{Binding MaguideFile}" />
            </DockPanel>
            <DockPanel Margin="0,0,0,10">
                <Button Content="生成幅值标定文件" Height="30" Command="{Binding GenerateAmplitudeCommand}" Margin="150,0,0,0"/>
            </DockPanel>

        </StackPanel>
    </Grid>
</Window>
