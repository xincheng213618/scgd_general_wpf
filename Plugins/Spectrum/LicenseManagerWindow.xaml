<Window x:Class="Spectrum.LicenseManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spectrum"
        mc:Ignorable="d"
        Title="许可文件管理" Height="350" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <ListBox x:Name="LicenseListBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="220" />
        <Button x:Name="UploadButton" Content="上传许可文件" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="UploadButton_Click"/>
        <Button x:Name="DeleteButton" Content="删除选中文件" Width="120" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="DeleteButton_Click"/>
    </Grid>
</Window>
