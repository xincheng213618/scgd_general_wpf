<Window x:Class="ProjectARVRPro.Process.ProcessManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectARVRPro.Process"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:ProcessManager}"
        Title="流程处理配置" Height="800" Width="1400" Background="{DynamicResource GlobalBackground}" Initialized="Window_Initialized">
    <Window.Resources>
        <local:TypeNameConverter x:Key="TypeNameConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="500"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="450" MinWidth="350"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Process Meta List -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <GroupBox Header="创建 ProcessMeta" Padding="8" Margin="0 0 0 8" Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="名称:" VerticalAlignment="Center" Margin="0 0 4 0"/>
                    <TextBox Grid.Column="1" Text="{Binding NewMetaName, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Column="2" Text="流程模板:" VerticalAlignment="Center" Margin="12 0 4 0"/>
                    <ComboBox Grid.Column="3" ItemsSource="{Binding templateModels}" DisplayMemberPath="Key" SelectedItem="{Binding SelectedTemplate}"/>

                    <TextBlock Grid.Column="4" Text="处理类:" VerticalAlignment="Center" Margin="12 0 4 0"/>
                    <ComboBox Grid.Column="5" ItemsSource="{Binding Processes}" SelectedItem="{Binding SelectedProcess}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource TypeNameConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Grid.Column="6" Content="添加" Margin="12 0 0 0" Padding="12 4" Command="{Binding AddMetaCommand}"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="更新 ProcessMeta" Padding="8" Margin="0 0 0 8" Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="流程模板:" VerticalAlignment="Center" Margin="0 0 4 0"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding templateModels}" DisplayMemberPath="Key" SelectedItem="{Binding UpdateTemplate}"/>

                    <TextBlock Grid.Column="2" Text="处理类:" VerticalAlignment="Center" Margin="12 0 4 0"/>
                    <ComboBox Grid.Column="3" ItemsSource="{Binding Processes}" SelectedItem="{Binding UpdateProcess}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource TypeNameConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Grid.Column="4" Content="更新" Margin="12 0 0 0" Padding="12 4" Command="{Binding UpdateMetaCommand}"/>
                </Grid>
            </GroupBox>

            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0 0 0 8">
                <Button Content="删除选中" Padding="12 4" Command="{Binding RemoveMetaCommand}"/>
                <Button Content="上移" Padding="12 4" Margin="8 0 0 0" Command="{Binding MoveUpCommand}"/>
                <Button Content="下移" Padding="12 4" Margin="8 0 0 0" Command="{Binding MoveDownCommand}"/>
                <TextBlock Text="  (双击可重命名, 当前仅内存保存)" VerticalAlignment="Center" Margin="12 0 0 0" Foreground="Gray"/>
            </StackPanel>

            <ListView Grid.Row="3" ItemsSource="{Binding ProcessMetas}" SelectedItem="{Binding SelectedProcessMeta}" x:Name="lvMetas" SelectionChanged="ListView_SelectionChanged">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource ListViewItemBaseStyle.Small}">
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource GridViewColumnHeaderBase}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn Header="名称" Width="180" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="流程模板" Width="180" DisplayMemberBinding="{Binding FlowTemplate}"/>
                        <GridViewColumn Header="处理类" Width="200" DisplayMemberBinding="{Binding ProcessTypeName}"/>
                        <GridViewColumn Header="是否启用" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsEnabled}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        
        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>
        
        <!-- Right Panel: Configuration Editing -->
        <Border Grid.Column="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="{DynamicResource GlobalBorderBrush}" CornerRadius="4,4,0,0" Padding="12,8">
                    <DockPanel>
                        <Button DockPanel.Dock="Right" Content="&#xE713;" FontFamily="Segoe MDL2 Assets" 
                                Command="{Binding SelectedProcessMeta.EditProcessConfigCommand}"
                                Visibility="{Binding SelectedProcessMeta.HasProcessConfig, Converter={StaticResource BoolToVisibilityConverter}}"
                                ToolTip="在独立窗口编辑配置"
                                Padding="6,4" Margin="8,0,0,0"/>
                        <TextBlock Text="配置编辑" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                    </DockPanel>
                </Border>
                
                <!-- Properties Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
                    <StackPanel x:Name="PropertyPanel">
                        <TextBlock Text="请选择一个处理项查看配置" Foreground="Gray" HorizontalAlignment="Center" Margin="0,20,0,0"
                                   x:Name="PlaceholderText"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
