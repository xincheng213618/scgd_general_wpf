<UserControl x:Class="ColorVision.UI.PropertyEditor.Json.JsonPropertyEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorVision.UI.PropertyEditor.Json"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="ToolTip" Value="{Binding Text, RelativeSource={RelativeSource Self}}"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border Background="{DynamicResource SecondaryRegionBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                CornerRadius="5">
            <ScrollViewer Margin="5" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="PropertyPanel">
                    <!-- PropertyEditor controls will be generated here -->
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Error message display -->
        <Border x:Name="ErrorBorder" 
                Background="{DynamicResource DangerBrush}" 
                Padding="10" 
                Margin="10"
                CornerRadius="5"
                Visibility="Collapsed"
                VerticalAlignment="Top">
            <TextBlock x:Name="ErrorText" 
                       Foreground="White" 
                       TextWrapping="Wrap"
                       FontWeight="Bold"/>
        </Border>
    </Grid>
</UserControl>
