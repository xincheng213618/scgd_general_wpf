<!-- ListEditorWindow.xaml -->
<Window x:Class="ColorVision.UI.PropertyEditor.Editor.List.ListEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="编辑列表" Height="600" Width="800" 
        Background="{DynamicResource GlobalBackground}"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Top">
            <Button x:Name="AddButton" Content="添加" Width="80" Click="AddButton_Click" 
                    Margin="0,0,5,0" />
            <Button x:Name="EditButton" Content="编辑" Width="80" Click="EditButton_Click" 
                    Margin="0,0,5,0" IsEnabled="False"/>
            <Button x:Name="DeleteButton" Content="删除" Width="80" Click="DeleteButton_Click" 
                    Margin="0,0,5,0" IsEnabled="False" />
            <Button x:Name="MoveUpButton" Content="上移" Width="80" Click="MoveUpButton_Click" 
                    Margin="0,0,5,0" IsEnabled="False"/>
            <Button x:Name="MoveDownButton" Content="下移" Width="80" Click="MoveDownButton_Click" 
                    IsEnabled="False"/>
        </StackPanel>

        <!-- List Display -->
        <Border Grid.Row="1" BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" CornerRadius="5">
            <ListView x:Name="ItemsListView" 
                      SelectionMode="Single"
                      SelectionChanged="ItemsListView_SelectionChanged"
                      MouseDoubleClick="ItemsListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="索引" Width="60" DisplayMemberBinding="{Binding Index}"/>
                        <GridViewColumn Header="值" Width="550" DisplayMemberBinding="{Binding DisplayValue}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="确定" Width="80" Click="OkButton_Click" 
                    Margin="0,0,5,0" Background="{StaticResource PrimaryBrush}" 
                    Foreground="White" BorderThickness="0"/>
            <Button Content="取消" Width="80" Click="CancelButton_Click" 
                    Background="{StaticResource PrimaryBrush}" 
                    Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
