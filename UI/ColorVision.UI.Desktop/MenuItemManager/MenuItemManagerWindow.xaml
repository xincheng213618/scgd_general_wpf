<Window x:Class="ColorVision.UI.Desktop.MenuItemManager.MenuItemManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:ColorVision.UI.Desktop.MenuItemManager"
        mc:Ignorable="d"
        Title="MenuItemManager" Height="600" Width="1000" 
        Background="{DynamicResource GlobalBackground}" 
        Initialized="Window_Initialized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <Grid Grid.Row="0" Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <hc:TextBox x:Name="SearchBox" Grid.Column="0" Margin="0,0,5,0"
                       Style="{DynamicResource TextBoxPlusBaseStyle}" 
                       hc:InfoElement.Placeholder="Search menu items..."
                       VerticalContentAlignment="Center" 
                       TextChanged="SearchBox_TextChanged"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Apply" Click="Apply_Click" Margin="0,0,5,0" Padding="8,5"/>
                <Button Content="Reset" Click="Reset_Click" Padding="8,5"/>
            </StackPanel>
        </Grid>

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="5,0,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" MinWidth="150"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="350"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="280" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Menu tree -->
            <Border Grid.Column="0" Style="{StaticResource BorderModuleArea}" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Menu Groups" FontSize="14" FontWeight="Bold" Margin="5,0,0,5" 
                              Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <ListView x:Name="GroupListView" Grid.Row="1" Background="Transparent" BorderThickness="0"
                             SelectionChanged="GroupListView_SelectionChanged"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem" BasedOn="{StaticResource ListViewItemBaseStyle.Small}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Padding" Value="3"/>
                                <Setter Property="Margin" Value="0,1"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="{DynamicResource BorderBrush}" 
                         ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>

            <!-- Middle: Menu items list -->
            <Border Grid.Column="2" Style="{StaticResource BorderModuleArea}" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Menu Items" FontSize="14" FontWeight="Bold" Margin="5,0,0,5" 
                              Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <ListView x:Name="MenuItemListView" Grid.Row="1" Background="Transparent" BorderThickness="0"
                             SelectionChanged="MenuItemListView_SelectionChanged"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem" BasedOn="{StaticResource ListViewItemBaseStyle.Small}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Padding" Value="3"/>
                                <Setter Property="Margin" Value="0,1"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Visible" Width="55">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate DataType="{x:Type local:MenuItemSetting}">
                                            <CheckBox IsChecked="{Binding IsVisible}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Header" Width="150" DisplayMemberBinding="{Binding Header}"/>
                                <GridViewColumn Header="GuidId" Width="140" DisplayMemberBinding="{Binding GuidId}"/>
                                <GridViewColumn Header="Default Order" Width="80" DisplayMemberBinding="{Binding DefaultOrder}"/>
                                <GridViewColumn Header="Order Override" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate DataType="{x:Type local:MenuItemSetting}">
                                            <TextBox Text="{Binding OrderOverride, UpdateSourceTrigger=PropertyChanged}" 
                                                    Width="60" BorderThickness="1" Padding="2"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Hotkey" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate DataType="{x:Type local:MenuItemSetting}">
                                            <TextBox Text="{Binding HotkeyOverride, UpdateSourceTrigger=PropertyChanged}" 
                                                    Width="80" BorderThickness="1" Padding="2"
                                                    hc:InfoElement.Placeholder="e.g. Ctrl+K"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" Background="{DynamicResource BorderBrush}" 
                         ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>

            <!-- Right: Properties panel -->
            <Border Grid.Column="4" Style="{StaticResource BorderModuleArea}" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" x:Name="DetailTitle" Text="Select a menu item" 
                              FontSize="14" FontWeight="Bold" Margin="5,0,0,5" 
                              Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="DetailPanel" Margin="5">
                            <TextBlock Text="Select a menu item to view details" 
                                      Foreground="{DynamicResource SecondaryTextBrush}" 
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom status bar -->
        <DockPanel Grid.Row="2" Margin="10,0,10,5">
            <TextBlock x:Name="StatusText" Text="" Foreground="{DynamicResource PrimaryTextBrush}"/>
        </DockPanel>
    </Grid>
</Window>
