<Window x:Class="ColorVision.UI.Desktop.MenuItemManager.MenuItemManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:ColorVision.UI.Desktop.MenuItemManager"
        mc:Ignorable="d"
        Title="MenuItemManager" Height="650" Width="1100" 
        Background="{DynamicResource GlobalBackground}" 
        Initialized="Window_Initialized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <Grid Grid.Row="0" Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <hc:TextBox x:Name="SearchBox" Grid.Column="0" Margin="0,0,5,0"
                       Style="{DynamicResource TextBoxPlusBaseStyle}" 
                       hc:InfoElement.Placeholder="Search menu items..."
                       VerticalContentAlignment="Center" 
                       TextChanged="SearchBox_TextChanged"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Apply" Click="Apply_Click" Margin="0,0,5,0" Padding="8,5"/>
                <Button Content="Reset" Click="Reset_Click" Padding="8,5"/>
            </StackPanel>
        </Grid>

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="5,0,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" MinWidth="150"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="300" MinWidth="220"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Menu hierarchy TreeView -->
            <Border Grid.Column="0" Style="{StaticResource BorderModuleArea}" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Menu Structure" FontSize="14" FontWeight="Bold" Margin="5,0,0,5" 
                              Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TreeView x:Name="MenuTreeView" Grid.Row="1" Background="Transparent" BorderThickness="0"
                             SelectedItemChanged="MenuTreeView_SelectedItemChanged"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                                <Setter Property="IsExpanded" Value="True"/>
                                <Setter Property="Padding" Value="2"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="{DynamicResource BorderBrush}" 
                         ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>

            <!-- Middle: Menu items DataGrid -->
            <Border Grid.Column="2" Style="{StaticResource BorderModuleArea}" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" x:Name="ListTitle" Text="Menu Items" FontSize="14" FontWeight="Bold" Margin="5,0,0,5" 
                              Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <DataGrid x:Name="MenuItemDataGrid" Grid.Row="1" 
                             AutoGenerateColumns="False"
                             CanUserAddRows="False" CanUserDeleteRows="False"
                             CanUserReorderColumns="False"
                             SelectionMode="Single"
                             SelectionChanged="MenuItemDataGrid_SelectionChanged"
                             Background="Transparent" BorderThickness="0"
                             GridLinesVisibility="Horizontal"
                             HorizontalGridLinesBrush="{DynamicResource BorderBrush}"
                             RowHeaderWidth="0"
                             HeadersVisibility="Column"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Visible" Width="55" Binding="{Binding IsVisible, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Header" Width="120" Binding="{Binding Header}" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="4,2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="GuidId" Width="120" Binding="{Binding GuidId}" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
                                        <Setter Property="Padding" Value="4,2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Order" Width="60" Binding="{Binding DefaultOrder}" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="4,2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Order Override" Width="80" Binding="{Binding OrderOverride, UpdateSourceTrigger=PropertyChanged}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="4,2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="OwnerGuid" Width="100" Binding="{Binding OwnerGuid}" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
                                        <Setter Property="Padding" Value="4,2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="OwnerGuid Override" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:MenuItemSetting}">
                                        <TextBlock Text="{Binding OwnerGuidOverride}" VerticalAlignment="Center" Padding="4,2"
                                                  Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate DataType="{x:Type local:MenuItemSetting}">
                                        <ComboBox IsEditable="True" 
                                                 Text="{Binding OwnerGuidOverride, UpdateSourceTrigger=PropertyChanged}"
                                                 ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=AvailableOwnerGuids}"
                                                 Padding="2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Hotkey" Width="100" Binding="{Binding HotkeyOverride, UpdateSourceTrigger=PropertyChanged}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="4,2"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" Background="{DynamicResource BorderBrush}" 
                         ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>

            <!-- Right: Detail panel -->
            <Border Grid.Column="4" Style="{StaticResource BorderModuleArea}" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" x:Name="DetailTitle" Text="Select a menu item" 
                              FontSize="14" FontWeight="Bold" Margin="5,0,0,5" 
                              Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="DetailPanel" Margin="5">
                            <TextBlock Text="Select a menu item to view and edit details" 
                                      Foreground="{DynamicResource SecondaryTextBrush}" 
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom status bar -->
        <DockPanel Grid.Row="2" Margin="10,0,10,5">
            <TextBlock x:Name="StatusText" Text="" Foreground="{DynamicResource PrimaryTextBrush}"/>
        </DockPanel>
    </Grid>
</Window>
