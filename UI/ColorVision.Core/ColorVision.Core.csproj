<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0-windows;net6.0-windows</TargetFrameworks>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<ImplicitUsings>disable</ImplicitUsings>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
		<VersionPrefix>1.3.9.1</VersionPrefix>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageProjectUrl>https://github.com/xincheng213618/scgd_general_wpf</PackageProjectUrl>
		<IncludeSymbols>True</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="ColorVision.Core.props" />
		<None Remove="ColorVision.Core.targets" />
	</ItemGroup>
	<ItemGroup>
		<Content Include="..\..\x64\Release\opencv_helper.dll" Link="runtimes\win-x64\native\opencv_helper.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Pack>true</Pack>
			<PackagePath>runtimes/win-x64/native</PackagePath>
		</Content>
		<Content Include="..\..\packages\opencv\x64\vc17\bin\opencv_core4120.dll" Link="runtimes\win-x64\native\opencv_core4120.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Pack>true</Pack>
			<PackagePath>runtimes/win-x64/native</PackagePath>
		</Content>
		<Content Include="..\..\packages\opencv\x64\vc17\bin\opencv_highgui4120.dll" Link="runtimes\win-x64\native\opencv_highgui4120.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Pack>true</Pack>
			<PackagePath>runtimes/win-x64/native</PackagePath>
		</Content>
		<Content Include="..\..\packages\opencv\x64\vc17\bin\opencv_imgcodecs4120.dll" Link="runtimes\win-x64\native\opencv_imgcodecs4120.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Pack>true</Pack>
			<PackagePath>runtimes/win-x64/native</PackagePath>
		</Content>
		<Content Include="..\..\packages\opencv\x64\vc17\bin\opencv_imgproc4120.dll" Link="runtimes\win-x64\native\opencv_imgproc4120.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Pack>true</Pack>
			<PackagePath>runtimes/win-x64/native</PackagePath>
		</Content>
		<Content Include="..\..\packages\opencv\x64\vc17\bin\opencv_videoio4120.dll" Link="runtimes\win-x64\native\opencv_videoio4120.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Pack>true</Pack>
			<PackagePath>runtimes/win-x64/native</PackagePath>
		</Content>
	</ItemGroup>
	<ItemGroup>
	  <None Include="README.md">
		  <Pack>true</Pack>
		  <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

</Project>
