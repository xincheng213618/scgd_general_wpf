<Window x:Class="ColorVision.Rbac.RbacManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Rbac"
        xmlns:properties ="clr-namespace:ColorVision.Solution.Properties"
        xmlns:hc ="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:RbacManager}"
        Title="{x:Static properties:Resources.UserCenter}" Height="500" Width="700" Background="{DynamicResource GlobalBackground}" Initialized="Window_Initialized"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Window.Resources>
        <!-- 现代按钮样式 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#106EBE"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 次要按钮样式 -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F3F3F3"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E6E6E6"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#DADADA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- 背景渐变 -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E8F0FE" Offset="0"/>
                <GradientStop Color="#F8FBFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Border Background="White" 
                CornerRadius="12" 
                Margin="20"
                Padding="0"
                Effect="{DynamicResource EffectShadow2}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 标题栏 -->
                <Border Grid.Row="0" Background="#0078D4" CornerRadius="12,12,0,0" Padding="20,15">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE77B;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="24" 
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="{x:Static properties:Resources.UserCenter}" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- 操作按钮区域 -->
                <Border Grid.Row="1" Background="#FAFAFA" Padding="20,15" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding LoginCommand}" 
                                Style="{StaticResource ModernButton}"
                                Margin="0,0,10,0"
                                ToolTip="点击登录或切换账户">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8A7;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="{x:Static properties:Resources.LoginOrSwitch}"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding EditCommand}" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,10,0"
                                ToolTip="编辑当前用户详细信息">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="{x:Static properties:Resources.EditInfo}"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding OpenUserManagerCommand}" 
                                Style="{StaticResource ModernButton}"
                                Visibility="{Binding AdminButtonVisibility}"
                                ToolTip="管理系统用户和角色（仅管理员可用）">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE716;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="{x:Static properties:Resources.UserManagement}"/>
                            </StackPanel>
                        </Button>
                        <Button Click="BtnLogout_Click" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="10,0,0,0"
                                ToolTip="退出登录">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="{x:Static properties:Resources.Sign_out}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
                
                <!-- 用户信息卡片 -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20">
                    <Border Background="White" 
                            CornerRadius="8" 
                            BorderBrush="#EEEEEE" 
                            BorderThickness="1"
                            Padding="25"
                            Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 头像区域 -->
                            <Border Grid.Column="0" 
                                    Background="#E8F0FE" 
                                    CornerRadius="8" 
                                    Padding="15"
                                    Margin="0,0,25,0">
                                <StackPanel>
                                    <hc:Gravatar Id="{Binding Config.LoginResult.User.Username}" 
                                                 Width="96" 
                                                 Height="96"
                                                 />
                                    <TextBlock Text="{Binding CurrentUserDisplay}" 
                                               HorizontalAlignment="Center"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- 用户详细信息 -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock FontSize="22" FontWeight="Bold" Margin="0,0,0,15" Foreground="#0078D4">
                                    <Run Text="{x:Static properties:Resources.WelcomeBack}"/>
                                    <Run Text="{Binding CurrentUserDisplay}"/>
                                </TextBlock>
                                
                                <!-- 信息网格 -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- 用户ID -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="用户 ID" FontWeight="SemiBold" Margin="0,0,20,10" Foreground="#666666"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Config.LoginResult.User.Id}" Margin="0,0,0,10"/>
                                    
                                    <!-- 用户名 -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static properties:Resources.Username}" FontWeight="SemiBold" Margin="0,0,20,10" Foreground="#666666"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Config.LoginResult.User.Username}" Margin="0,0,0,10"/>
                                   
                                    
                                    <!-- 权限模式 -->
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="{x:Static properties:Resources.PermissionMode}" FontWeight="SemiBold" Margin="0,0,20,10" Foreground="#666666"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Config.LoginResult.UserDetail.PermissionMode}" Margin="0,0,0,10"/>
                                    
                                    <!-- 登录时间 -->
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="{x:Static properties:Resources.LoginTime}" FontWeight="SemiBold" Margin="0,0,20,10" Foreground="#666666"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Config.LoginResult.User.UpdatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Margin="0,0,0,10" Foreground="#666666"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ScrollViewer>
                
                <!-- 底部信息栏 -->
                <Border Grid.Row="3" 
                        Background="#FAFAFA" 
                        BorderBrush="#EEEEEE" 
                        BorderThickness="0,1,0,0"
                        Padding="20,12"
                        CornerRadius="0,0,12,12">
                    <TextBlock HorizontalAlignment="Center" 
                               Foreground="#999999" 
                               FontSize="11">
                        <Run Text="ColorVision RBAC "/>
                        <Run Text="{x:Static properties:Resources.UserManagementSystem}"/>
                        <Run Text=" | "/>
                        <Run Text="Version 2.0"/>
                    </TextBlock>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
