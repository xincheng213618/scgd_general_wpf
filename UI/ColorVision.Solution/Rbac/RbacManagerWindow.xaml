<Window x:Class="ColorVision.Rbac.RbacManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Rbac"
        xmlns:properties ="clr-namespace:ColorVision.Solution.Properties"
        xmlns:hc ="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:RbacManager}"
        Title="用户" Height="400" Width="600" Background="{DynamicResource GlobalBackground}" Initialized="Window_Initialized">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="登录" Command="{Binding LoginCommand}" Margin="0,0,10,0" 
                    ToolTip="点击登录到系统"/>
            <Button Content="编辑信息" Command="{Binding EditCommand}" Width="75"
                    ToolTip="编辑当前用户详细信息"/>
            <Button Content="用户管理" Command="{Binding OpenUserManagerCommand}" Width="75" 
                    Visibility="{Binding AdminButtonVisibility}"
                    ToolTip="管理系统用户和角色（仅管理员可用）"/>
        </StackPanel>
        <!-- User Information and Avatar -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Margin="20">
                <hc:Gravatar Id="{Binding Config.LoginResult.User.Username}" Width="64" Height="64"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Margin="20" VerticalAlignment="Center">
                <TextBlock FontSize="18" FontWeight="Bold" Margin="0,0,0,5">
                    <Run Text="当前用户: "/>
                    <Run Text="{Binding CurrentUserDisplay}"/>
                </TextBlock>
                <TextBlock Margin="0,0,0,2">
                    <Run Text="用户ID: "/>
                    <Run Text="{Binding Config.LoginResult.User.Id, FallbackValue='N/A'}"/>
                </TextBlock>
                <TextBlock Margin="0,0,0,2">
                    <Run Text="状态: "/>
                    <Run Text="{Binding StatusDisplay, FallbackValue='未知'}"/>
                </TextBlock>
                <TextBlock Margin="0,0,0,2">
                    <Run Text="角色: "/>
                    <Run Text="{Binding UserRoleDisplay, FallbackValue='无'}"/>
                </TextBlock>
                <TextBlock Margin="0,0,0,2">
                    <Run Text="权限模式: "/>
                    <Run Text="{Binding Config.LoginResult.UserDetail.PermissionMode, FallbackValue='未知'}"/>
                </TextBlock>
                <TextBlock Margin="0,0,0,2" Foreground="Gray" FontSize="12">
                    <Run Text="登录时间: "/>
                    <Run Text="{Binding Config.LoginResult.User.UpdatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}', FallbackValue='未知'}"/>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
