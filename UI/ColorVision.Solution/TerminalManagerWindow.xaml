<Window x:Class="ColorVision.Solution.TerminalManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Solution"
        mc:Ignorable="d"
        Title="Terminal (ConPTY)" Height="450" Width="800" Initialized="Window_Initialized">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <RichTextBox Name="rtbOutput" 
                     Grid.Row="0"
                     IsReadOnly="True" 
                     VerticalScrollBarVisibility="Auto"
                     Background="Black"
                     Foreground="White"
                     FontFamily="Consolas"
                     FontSize="12"
                     Margin="0"/>
        
        <TextBox Name="tbInput" 
                 Grid.Row="1"
                 Height="30" 
                 Background="#1E1E1E"
                 Foreground="White"
                 FontFamily="Consolas"
                 FontSize="12"
                 Margin="0"
                 PreviewKeyDown="tbInput_KeyDown"/>
    </Grid>
</Window>
