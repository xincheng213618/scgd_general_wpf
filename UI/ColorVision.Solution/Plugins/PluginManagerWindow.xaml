<Window x:Class="ColorVision.UI.Plugins.PluginManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.UI.Plugins;assembly=ColorVision.UI"
        xmlns:properties="clr-namespace:ColorVision.UI.Properties;assembly=ColorVision.UI"
        xmlns:hc ="https://handyorg.github.io/handycontrol"
        d:DataContext="{d:DesignInstance local:PluginManager}"
        xmlns:pl="clr-namespace:ColorVision.UI;assembly=ColorVision.UI"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.PluginManagerWindow}" Background="{DynamicResource GlobalBackground}" Height="720" Width="1000" Initialized="Window_Initialized">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="410"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid>
                <StackPanel Margin="5,5,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5" Height="20">
                        <Button Content="访问仓库" Command="{Binding OpenStoreCommand}" Margin="0,0,5,0"/>
                        <Button Content="安装包" Command="{Binding InstallPackageCommand}" Margin="0,0,5,0"/>
                        <Button Content="DLL版本" Command="{Binding OpenViewDllViersionCommand}" Margin="0,0,5,0"/>
                        <Button Content="重启" Command="{Binding RestartCommand}" Margin="0,0,5,0"/>
                        <Button Margin="0,0,5,0">
                            <Button.Command>
                                <Binding Path="UpdateAllCommand"/>
                            </Button.Command>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="一键更新" VerticalAlignment="Center"/>
                                <Border Background="#FF5252" CornerRadius="8" Padding="4,0" Margin="5,0,0,0" MinWidth="16" Visibility="{Binding UpdateAvailableCount, Converter={StaticResource int2VisibilityConverter}}">
                                    <TextBlock Text="{Binding UpdateAvailableCount}" Foreground="White" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                        </Button>
                       
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Grid>
                            <hc:ComboBox x:Name="DefalutSearchComboBox" Width="250" Padding="25,1,2,1"   IsEditable="True" Text="{Binding SearchName, UpdateSourceTrigger=PropertyChanged}" BorderThickness="1" hc:InfoElement.Placeholder="{x:Static properties:Resources.Search}" hc:InfoElement.ShowClearButton="True" BorderBrush="#CCCEDB"   VerticalContentAlignment="Center"  />
                            <Viewbox Width="20 " Height="20" HorizontalAlignment="Left" Margin="4,0,0,0">
                                <Rectangle Width="25 " Height="25" >
                                    <Rectangle.Resources>
                                        <SolidColorBrush x:Key="canvas" Opacity="0" />
                                        <SolidColorBrush x:Key="light-defaultgrey-10" Color="{DynamicResource defaultgreyColor}" Opacity=" 0.1" />
                                        <SolidColorBrush x:Key="light-defaultgrey" Color="{DynamicResource defaultgreyColor}" Opacity="1" />
                                    </Rectangle.Resources>
                                    <Rectangle.Fill>
                                        <DrawingBrush Stretch="None">
                                            <DrawingBrush.Drawing>
                                                <DrawingGroup>
                                                    <DrawingGroup x:Name="canvas">
                                                        <GeometryDrawing Brush="{DynamicResource canvas}" Geometry="F1M0,0H16V16H0Z" />
                                                    </DrawingGroup>
                                                    <DrawingGroup x:Name="level_1">
                                                        <GeometryDrawing Brush="{DynamicResource light-defaultgrey-10}" Geometry="F1M11.5,6.5a5,5,0,1,1-5-5A5,5,0,0,1,11.5,6.5Z" />
                                                        <GeometryDrawing Brush="{DynamicResource light-defaultgrey}" Geometry="F1M1,6.5a5.5,5.5,0,0,0,9.017,4.224l5.129,5.13.708-.708-5.13-5.129A5.5,5.5,0,1,0,1,6.5Zm1,0A4.5,4.5,0,1,1,6.5,11,4.505,4.505,0,0,1,2,6.5Z" />
                                                    </DrawingGroup>
                                                </DrawingGroup>
                                            </DrawingBrush.Drawing>
                                        </DrawingBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Viewbox>
                        </Grid>
                        <Button Content="安装" Command="{Binding DownloadPackageCommand}" Margin="5,0,5,0"/>
                    </StackPanel>


                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,5,5,0">
                    <Button  Command="{Binding EditConfigCommand}" Padding="2" Height="27" Width="27" >
                        <TextBlock Text="&#xE713;"  HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" RenderTransformOrigin="0.5,0.5"  FontSize="20" Foreground="{DynamicResource GlobalTextBrush}">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="rotateTransform21"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="rotateTransform21" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:0.5" FillBehavior="Stop"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>

                </StackPanel>

            </Grid>

            <ListView x:Name="ListViewPlugins" Background="Transparent"  ItemsSource="{Binding Plugins}" Margin="5,0,5,5"  SelectionChanged="ListViewPlugins_SelectionChanged" Grid.Row="1" Padding="2">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource ListViewItemBaseStyle}" >
                        <Setter Property="ContextMenu" Value="{Binding ContextMenu}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasUpdate}" Value="True">
                                <Setter Property="Background" Value="#FFF3E0"/>
                                <Setter Property="BorderBrush" Value="#FFA726"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="{x:Type GridViewColumnHeader}"  BasedOn="{StaticResource  GridViewColumnHeaderBase}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn Header="{x:Static properties:Resources.PluginName}" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate  DataType="{x:Type local:PluginInfoVM}">
                                    <StackPanel Orientation="Horizontal">
                                        <ui:ToggleSwitch  IsChecked="{Binding PluginInfo.Enabled}"  Margin="0,0,10,0" />
                                        <Border Background="#FFA726" CornerRadius="10" Width="20" Height="20" Margin="0,0,5,0" ToolTip="有可用更新" Visibility="{Binding HasUpdate, Converter={StaticResource bool2VisibilityConverter}}">
                                            <TextBlock Text="⬆" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                        </Border>
                                        <Image Source="{Binding Icon}" Width="20" Margin="0,0,10,0"/>
                                        <TextBlock  Text="{Binding Name,Mode=OneWay}"/>
                                    </StackPanel>

                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="加载">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate  DataType="{x:Type local:PluginInfoVM}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Width="50" Text="{Binding AssemblyVersion}" Margin="0,0,5,0"/>
                                        <TextBlock  Width="50"  Text="{Binding LastVersion}"  Margin="0,0,5,0"/>
                                        <Button Content="{x:Static properties:Resources.Update}" Command="{Binding UpdateCommand}" Visibility="{Binding PluginInfo.Enabled,Converter={StaticResource bool2VisibilityConverter}}" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
       
        </Grid>

        <Border x:Name="BorderContent" CornerRadius="5" Margin="0,0,5,5" d:DataContext="{d:DesignInstance local:PluginInfoVM}" Grid.Column="1">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1 " Margin="0,0,0,2">
                    <Grid>
                        <DockPanel>
                            <Image Source="{Binding Icon}" Width="50" Margin="10"/>
                            <StackPanel HorizontalAlignment="Left">
                                <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" Text="{Binding Name}" FontWeight="Bold" FontSize="20"  />
                                <StackPanel Orientation="Horizontal">
                                    <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" Text="{Binding PackageName}" />
                                    <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" Text="{Binding AssemblyVersion}" />
                                    <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" Text="{Binding AssemblyBuildDate,StringFormat=yyyy/MM/dd hh:mm:ss}" />
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                        <StackPanel  HorizontalAlignment="Right" VerticalAlignment="Top">
                            <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" Text="{Binding PluginInfo.Manifest.DllName}" HorizontalAlignment="Right" Padding="3"/>
                            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
                                <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" Text="{Binding PluginInfo.Manifest.Requires, StringFormat=Build By {0}}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="OpenLocalPath" Background="Transparent" BorderThickness="0" Command="{Binding OpenLocalPathCommand}" Margin="0,0,5,0"/>
                                <Button Content="{x:Static properties:Resources.ExtractPlugin}" Background="Transparent" BorderThickness="0" Command="{Binding ExtractPluginCommand}"/>
                            </StackPanel>

                        </StackPanel>
                    </Grid>

                </Border>
                <TabControl x:Name="TabControl1" Grid.Row="1" SelectionChanged="TabControl_SelectionChanged">
                    <TabItem Header="README">
                        <wv2:WebView2 Name="webViewReadMe"  Grid.Row="1" />
                    </TabItem>
                    <TabItem Header="CHANGELOG" > 
                        <wv2:WebView2 Name="webViewChangeLog"  Grid.Row="1" />
                    </TabItem>
                    <TabItem Header="接口管理">
                        <ScrollViewer>
                            <StackPanel  x:Name="DetailInfo">
                                
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="依赖项">
                        <ScrollViewer>
                            <StackPanel  x:Name="Dependents">
                                <ListView  x:Name="DependentsListView">
                                    <ListView.View>
                                        <GridView >
                                            <GridViewColumn Header="Package">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate >
                                                        <TextBlock  Text="{Binding Key}"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="Version">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate >
                                                        <TextBlock  Text="{Binding Value}"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
  
                
            </Grid>
        </Border>

    </Grid>

</Window>
