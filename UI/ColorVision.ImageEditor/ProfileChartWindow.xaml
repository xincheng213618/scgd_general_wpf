<Window x:Class="ColorVision.ImageEditor.ProfileChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.ImageEditor" xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Profile Line Chart" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Initialized="Window_Initialized">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Save Chart as Image..." Click="SaveChartButton_Click" Margin="0,0,10,0" Padding="5,2"/>
            <Button Content="Save Data as CSV..." Click="SaveDataButton_Click" Padding="5,2"/>
        </StackPanel>

        <!-- 
        图表控件占位符。
        你需要将下面的 Border 替换成你项目中实际使用的图表控件。
        例如: <lvc:CartesianChart x:Name="MyChart" Grid.Row="1" />
        -->
        <Border x:Name="ChartContainer" Grid.Row="1" BorderBrush="Gray" BorderThickness="1">
            <!-- 为了演示，这里只放一个文本。你应该在这里放置真实的图表控件 -->
            <lvc:CartesianChart Grid.Row="1" Name="ProfileChart" Foreground="{StaticResource GlobalTextBrush}" ZoomMode ="Y"  ZoomingSpeed="0.5"/>
        </Border>

    </Grid>
</Window>
