<Window x:Class="ColorVision.ImageEditor.Window3D"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.ImageEditor"
        mc:Ignorable="d"
        Title="3D视图" Height="450" Width="800" Initialized="Window_Initialized">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="727*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="ContentGrid" Grid.ColumnSpan="2" />
        <StackPanel  VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button Content="+"  Click="Button_Click"  Panel.ZIndex="99" Grid.RowSpan="2"/>
            <Button Content="-"  Click="Button_Click_1"  Panel.ZIndex="99" Grid.RowSpan="2"/>
            <Button Content="L"  Click="L_Click"  Panel.ZIndex="99" Grid.RowSpan="2"/>
            <Button Content="R"  Click="R_Click"  Panel.ZIndex="99" Grid.RowSpan="2"/>
            <Button Content="T"  Click="T_Click"  Panel.ZIndex="99" Grid.RowSpan="2"/>
            <Button Content="B"  Click="B_Click"  Panel.ZIndex="99" Grid.RowSpan="2"/>
            <Button Content="D"  Click="D_Click"  Panel.ZIndex="99" Grid.RowSpan="2"/>
            <Button Content="F"  Click="F_Click"  Panel.ZIndex="99" Grid.RowSpan="2"/>
            <Button Content="A"  Click="A_Click"  Panel.ZIndex="99" Grid.RowSpan="2"/>
            <Button Content="C"  Click="C_Click"  Panel.ZIndex="99" Grid.RowSpan="2"/>

        </StackPanel>
    </Grid>

</Window>
