<Window x:Class="ColorVision.ImageEditor.HistogramChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.ImageEditor"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="直方图 (Histogram)" Height="450" Width="420" 
        WindowStartupLocation="CenterScreen" 
        Background="{DynamicResource GlobalBackground}" 
        Initialized="Window_Initialized">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
            <Button x:Name="LogScaleButton" Content="Log Scale" Click="LogScaleButton_Click" Padding="5,2" Margin="0,0,5,0"/>
            <Button x:Name="OptimizeButton" Content="Optimize" Click="OptimizeButton_Click" Padding="5,2" Margin="0,0,10,0"/>
            <CheckBox x:Name="ShowRedCheckBox" Content="Red" IsChecked="True" 
                      Checked="ChannelCheckBox_CheckChanged" Unchecked="ChannelCheckBox_CheckChanged" 
                      Margin="0,0,10,0" VerticalAlignment="Center" Visibility="Collapsed" Foreground="Red"/>
            <CheckBox x:Name="ShowGreenCheckBox" Content="Green" IsChecked="True" 
                      Checked="ChannelCheckBox_CheckChanged" Unchecked="ChannelCheckBox_CheckChanged" 
                      Margin="0,0,10,0" VerticalAlignment="Center" Visibility="Collapsed" Foreground="Green"/>
            <CheckBox x:Name="ShowBlueCheckBox" Content="Blue" IsChecked="True" 
                      Checked="ChannelCheckBox_CheckChanged" Unchecked="ChannelCheckBox_CheckChanged" 
                      Margin="0,0,10,0" VerticalAlignment="Center" Visibility="Collapsed" Foreground="Blue"/>
            <CheckBox x:Name="ShowGrayCheckBox" Content="Gray" IsChecked="True" 
                      Checked="ChannelCheckBox_CheckChanged" Unchecked="ChannelCheckBox_CheckChanged" 
                      Margin="0,0,10,0" VerticalAlignment="Center" Visibility="Collapsed"/>
        </StackPanel>
        
        <!-- Chart -->
        <ScottPlot:WpfPlot Grid.Row="1" x:Name="WpfPlot"/>

    </Grid>
</Window>
