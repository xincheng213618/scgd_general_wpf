<Window x:Class="ColorVision.ImageEditor.EditorTools.Algorithms.GammaCorrectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="伽马校正" Height="200" Width="500" 
        Background="{DynamicResource GlobalBackground}"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="伽马校正" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <DockPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="伽马值" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="60"/>
            <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=GammaSlider, Path=Value, StringFormat=F3}" 
                     Width="80" Margin="5,0,0,0"/>
            <hc:PreviewSlider x:Name="GammaSlider" 
                              TickFrequency="0.001" 
                              IsSnapToTickEnabled="True" 
                              SmallChange="0.1" 
                              LargeChange="1" 
                              Value="1" 
                              Minimum="0" 
                              Maximum="10" 
                              ValueChanged="GammaSlider_ValueChanged"/>
        </DockPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="应用" Width="80" Margin="0,0,10,0" Click="Apply_Click"/>
            <Button Content="取消" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
