<Window x:Class="ColorVision.ImageEditor.EditorTools.Algorithms.ThresholdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="阈值处理" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="调整阈值" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1">
            <DockPanel Margin="0,10,0,5">
                <TextBlock Text="阈值" VerticalAlignment="Center" MinWidth="80" Margin="0,0,10,0"/>
                <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=ThresholdSlider, Path=Value, StringFormat=F0}" Width="60" Margin="5,0,0,0"/>
                <hc:PreviewSlider x:Name="ThresholdSlider" 
                                  TickFrequency="1" 
                                  IsSnapToTickEnabled="True" 
                                  SmallChange="1" 
                                  LargeChange="10" 
                                  Value="0" 
                                  Minimum="0" 
                                  Maximum="65535"
                                  ValueChanged="ThresholdSlider_ValueChanged"/>
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="应用" Width="80" Click="Apply_Click" Margin="0,0,10,0"/>
            <Button Content="取消" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
