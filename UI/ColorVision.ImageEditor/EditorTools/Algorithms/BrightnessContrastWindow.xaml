<Window x:Class="ColorVision.ImageEditor.EditorTools.Algorithms.BrightnessContrastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="亮度对比度调整" Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="调整亮度和对比度" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1">
            <DockPanel Margin="0,10,0,5">
                <TextBlock Text="亮度" VerticalAlignment="Center" MinWidth="80" Margin="0,0,10,0"/>
                <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=BrightnessSlider, Path=Value, StringFormat=F0}" Width="60" Margin="5,0,0,0"/>
                <hc:PreviewSlider x:Name="BrightnessSlider" 
                                  TickFrequency="1" 
                                  IsSnapToTickEnabled="True" 
                                  SmallChange="1" 
                                  LargeChange="10" 
                                  Value="0" 
                                  Minimum="-100" 
                                  Maximum="150"
                                  ValueChanged="BrightnessSlider_ValueChanged"/>
            </DockPanel>

            <DockPanel Margin="0,10,0,5">
                <TextBlock Text="对比度" VerticalAlignment="Center" MinWidth="80" Margin="0,0,10,0"/>
                <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=ContrastSlider, Path=Value, StringFormat=F0}" Width="60" Margin="5,0,0,0"/>
                <hc:PreviewSlider x:Name="ContrastSlider" 
                                  TickFrequency="1" 
                                  IsSnapToTickEnabled="True" 
                                  SmallChange="1" 
                                  LargeChange="10" 
                                  Value="0" 
                                  Minimum="-50" 
                                  Maximum="100"
                                  ValueChanged="ContrastSlider_ValueChanged"/>
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="应用" Width="80" Click="Apply_Click" Margin="0,0,10,0"/>
            <Button Content="取消" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
