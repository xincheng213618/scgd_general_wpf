<Window x:Class="ColorVision.ImageEditor.EditorTools.Algorithms.GaussianBlurWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="高斯模糊" Height="250" Width="450"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 核大小 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="核大小 (必须为奇数):" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <hc:PreviewSlider Grid.Column="0" x:Name="KernelSizeSlider" 
                                  Minimum="1" Maximum="31" Value="5" 
                                  TickFrequency="2" IsSnapToTickEnabled="True"
                                  ValueChanged="Slider_ValueChanged"/>
                <TextBlock Grid.Column="1" Text="{Binding ElementName=KernelSizeSlider, Path=Value}" 
                           Width="40" TextAlignment="Right" Margin="10,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Sigma -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Sigma (标准差):" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <hc:PreviewSlider Grid.Column="0" x:Name="SigmaSlider" 
                                  Minimum="0.1" Maximum="10" Value="1.5" 
                                  TickFrequency="0.1" IsSnapToTickEnabled="False"
                                  ValueChanged="Slider_ValueChanged"/>
                <TextBlock Grid.Column="1" Text="{Binding ElementName=SigmaSlider, Path=Value, StringFormat=F1}" 
                           Width="40" TextAlignment="Right" Margin="10,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- 按钮 -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="应用" Width="80" Margin="0,0,10,0" Click="Apply_Click"/>
            <Button Content="取消" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
