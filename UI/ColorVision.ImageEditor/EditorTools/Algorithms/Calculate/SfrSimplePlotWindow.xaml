<Window x:Class="ColorVision.ImageEditor.EditorTools.Algorithms.Calculate.SfrSimplePlotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ColorVision.ImageEditor.EditorTools.Algorithms.Calculate"
        Title="SFR Plot" Height="700" Width="1000">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" Width="300" Margin="8">
            <TextBlock Text="SFR Information" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="MTF50 (norm):" Width="120" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtMtf50Norm" Width="160" VerticalAlignment="Center" FontWeight="Bold"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="MTF50 (cy/pix):" Width="120" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtMtf50CyPix" Width="160" VerticalAlignment="Center" FontWeight="Bold"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="MTF10 (norm):" Width="120" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtMtf10Norm" Width="160" VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="MTF10 (cy/pix):" Width="120" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtMtf10CyPix" Width="160" VerticalAlignment="Center"/>
            </StackPanel>

            <Separator Margin="0,16,0,8"/>

            <TextBlock Text="查询" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="频率:" VerticalAlignment="Center" Width="60"/>
                <TextBox x:Name="TxtFreq" Width="120" Text="0.5"/>
                <Button Content="MTF@Freq" Width="100" Margin="8,0,0,0" Click="BtnMtfAtFreq_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="MTF:" VerticalAlignment="Center" Width="60"/>
                <TextBox x:Name="TxtMtf" Width="120" Text="0.5"/>
                <Button Content="Freq@MTF" Width="100" Margin="8,0,0,0" Click="BtnFreqAtMtf_Click"/>
            </StackPanel>

            <TextBlock x:Name="TxtResult" Margin="0,8,0,0" TextWrapping="Wrap"/>

            <Separator Margin="0,16,0,8"/>

            <Button Content="导出到 CSV" Width="280" Height="32" Click="BtnExportCsv_Click" FontWeight="Bold"/>
        </StackPanel>

        <local:SfrSimplePlotControl x:Name="Plot" Margin="8"/>
    </DockPanel>
</Window>
