<Window x:Class="ColorVision.ImageEditor.EditorTools.Algorithms.EdgeDetectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="边缘检测 (Canny)" Height="250" Width="450"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 低阈值 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="低阈值:" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <hc:PreviewSlider Grid.Column="0" x:Name="Threshold1Slider" 
                                  Minimum="0" Maximum="255" Value="50" 
                                  TickFrequency="1" IsSnapToTickEnabled="True"
                                  ValueChanged="Slider_ValueChanged"/>
                <TextBlock Grid.Column="1" Text="{Binding ElementName=Threshold1Slider, Path=Value}" 
                           Width="40" TextAlignment="Right" Margin="10,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- 高阈值 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="高阈值:" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <hc:PreviewSlider Grid.Column="0" x:Name="Threshold2Slider" 
                                  Minimum="0" Maximum="255" Value="150" 
                                  TickFrequency="1" IsSnapToTickEnabled="True"
                                  ValueChanged="Slider_ValueChanged"/>
                <TextBlock Grid.Column="1" Text="{Binding ElementName=Threshold2Slider, Path=Value}" 
                           Width="40" TextAlignment="Right" Margin="10,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- 按钮 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="应用" Width="80" Margin="0,0,10,0" Click="Apply_Click"/>
            <Button Content="取消" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
