<Window x:Class="ColorVision.ImageEditor.EditorTools.Algorithms.WhiteBalanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="白平衡调整" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="调整白平衡" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1">
            <DockPanel Margin="0,10,0,5">
                <TextBlock Text="红色" VerticalAlignment="Center" MinWidth="80" Margin="0,0,10,0"/>
                <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=RedSlider, Path=Value, StringFormat=F3}" Width="60" Margin="5,0,0,0"/>
                <hc:PreviewSlider x:Name="RedSlider" 
                                  TickFrequency="0.001" 
                                  IsSnapToTickEnabled="True" 
                                  SmallChange="0.001" 
                                  LargeChange="0.01" 
                                  Value="1" 
                                  Minimum="0.5" 
                                  Maximum="2"
                                  ValueChanged="WhiteBalanceSlider_ValueChanged"/>
            </DockPanel>

            <DockPanel Margin="0,10,0,5">
                <TextBlock Text="绿色" VerticalAlignment="Center" MinWidth="80" Margin="0,0,10,0"/>
                <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=GreenSlider, Path=Value, StringFormat=F3}" Width="60" Margin="5,0,0,0"/>
                <hc:PreviewSlider x:Name="GreenSlider" 
                                  TickFrequency="0.001" 
                                  IsSnapToTickEnabled="True" 
                                  SmallChange="0.001" 
                                  LargeChange="0.01" 
                                  Value="1" 
                                  Minimum="0.5" 
                                  Maximum="2"
                                  ValueChanged="WhiteBalanceSlider_ValueChanged"/>
            </DockPanel>

            <DockPanel Margin="0,10,0,5">
                <TextBlock Text="蓝色" VerticalAlignment="Center" MinWidth="80" Margin="0,0,10,0"/>
                <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=BlueSlider, Path=Value, StringFormat=F3}" Width="60" Margin="5,0,0,0"/>
                <hc:PreviewSlider x:Name="BlueSlider" 
                                  TickFrequency="0.001" 
                                  IsSnapToTickEnabled="True" 
                                  SmallChange="0.001" 
                                  LargeChange="0.01" 
                                  Value="1" 
                                  Minimum="0.5" 
                                  Maximum="2"
                                  ValueChanged="WhiteBalanceSlider_ValueChanged"/>
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="应用" Width="80" Click="Apply_Click" Margin="0,0,10,0"/>
            <Button Content="取消" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
