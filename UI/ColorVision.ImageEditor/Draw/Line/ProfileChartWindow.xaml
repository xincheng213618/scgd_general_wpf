<Window x:Class="ColorVision.ImageEditor.ProfileChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.ImageEditor" 
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Profile Line Chart" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Initialized="Window_Initialized">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar for save buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
            <Button Content="Save Chart as Image..." Click="SaveChartButton_Click" Margin="0,0,10,0" Padding="5,2"/>
            <Button Content="Save Data as CSV..." Click="SaveDataButton_Click" Padding="5,2" Margin="0,0,10,0"/>
            <Button Content="Copy to Clipboard" Click="CopyToClipboardButton_Click" Padding="5,2"/>
        </StackPanel>

        <!-- Toolbar for display options -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <CheckBox x:Name="ShowPointsCheckBox" Content="Show Points" IsChecked="False" Checked="ShowPointsCheckBox_CheckChanged" Unchecked="ShowPointsCheckBox_CheckChanged" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <CheckBox x:Name="SmoothLineCheckBox" Content="Smooth Line" IsChecked="True" Checked="SmoothLineCheckBox_CheckChanged" Unchecked="SmoothLineCheckBox_CheckChanged" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBlock Text="Line Width:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <Slider x:Name="LineWidthSlider" Minimum="1" Maximum="5" Value="2" Width="100" VerticalAlignment="Center" ValueChanged="LineWidthSlider_ValueChanged"/>
        </StackPanel>

        <!-- Chart -->
        <lvc:CartesianChart Grid.Row="2" Name="ProfileChart" Foreground="{StaticResource GlobalTextBrush}" ZoomingSpeed="0.5"/>

    </Grid>
</Window>
