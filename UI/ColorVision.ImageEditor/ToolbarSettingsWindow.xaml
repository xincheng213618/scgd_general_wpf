<Window x:Class="ColorVision.ImageEditor.ToolbarSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.ImageEditor"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="工具栏设置" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="工具栏和工具可见性设置" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Toolbar Visibility Section -->
                <Border Background="{DynamicResource GlobalBorderBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="1" Margin="0,5" CornerRadius="5">
                    <StackPanel Margin="10">
                        <TextBlock Text="工具栏可见性" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <DockPanel Margin="0,5">
                            <ui:ToggleSwitch IsChecked="{Binding Config.IsToolBarAlVisible}" DockPanel.Dock="Right" />
                            <TextBlock Text="底部工具栏 (ToolBarAl)" Width="250"/>
                            <TextBlock Text="Ctrl+Shift+1" Foreground="Gray" FontStyle="Italic" Margin="10,0,0,0"/>
                        </DockPanel>

                        <DockPanel Margin="0,5">
                            <ui:ToggleSwitch IsChecked="{Binding Config.IsToolBarDrawVisible}" DockPanel.Dock="Right" />
                            <TextBlock Text="绘制工具栏 (ToolBarDraw)" Width="250"/>
                            <TextBlock Text="Ctrl+Shift+2" Foreground="Gray" FontStyle="Italic" Margin="10,0,0,0"/>
                        </DockPanel>

                        <DockPanel Margin="0,5">
                            <ui:ToggleSwitch IsChecked="{Binding Config.IsToolBarTopVisible}" DockPanel.Dock="Right" />
                            <TextBlock Text="顶部工具栏 (ToolBarTop)" Width="250"/>
                            <TextBlock Text="Ctrl+Shift+3" Foreground="Gray" FontStyle="Italic" Margin="10,0,0,0"/>
                        </DockPanel>

                        <DockPanel Margin="0,5">
                            <ui:ToggleSwitch IsChecked="{Binding Config.IsToolBarLeftVisible}" DockPanel.Dock="Right" />
                            <TextBlock Text="左侧工具栏 (ToolBarLeft)" Width="250"/>
                            <TextBlock Text="Ctrl+Shift+4" Foreground="Gray" FontStyle="Italic" Margin="10,0,0,0"/>
                        </DockPanel>

                        <DockPanel Margin="0,5">
                            <ui:ToggleSwitch IsChecked="{Binding Config.IsToolBarRightVisible}" DockPanel.Dock="Right" />
                            <TextBlock Text="右侧工具栏 (ToolBarRight)" Width="250"/>
                            <TextBlock Text="Ctrl+Shift+5" Foreground="Gray" FontStyle="Italic" Margin="10,0,0,0"/>
                        </DockPanel>
                    </StackPanel>
                </Border>

                <!-- Editor Tools Visibility Section -->
                <Border Background="{DynamicResource GlobalBorderBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="1" Margin="0,5" CornerRadius="5">
                    <StackPanel Margin="10">
                        <TextBlock Text="编辑器工具可见性" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="控制哪些工具显示在工具栏中" Foreground="Gray" FontSize="11" Margin="0,0,0,10"/>
                        
                        <ItemsControl x:Name="EditorToolsItemsControl" ItemsSource="{Binding EditorTools}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel Margin="0,5">
                                        <ui:ToggleSwitch IsChecked="{Binding IsVisible}" DockPanel.Dock="Right" />
                                        <TextBlock Text="{Binding DisplayName}" Width="250"/>
                                        <TextBlock Text="{Binding Location}" Foreground="Gray" FontStyle="Italic" Margin="10,0,0,0"/>
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="全部显示" Click="ShowAll_Click" Margin="0,0,10,0" Width="100"/>
            <Button Content="全部隐藏" Click="HideAll_Click" Margin="0,0,10,0" Width="100"/>
            <Button Content="关闭" Click="Close_Click" Width="100" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
