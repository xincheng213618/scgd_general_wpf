<Window x:Class="ColorVision.SocketProtocol.SocketManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.SocketProtocol"
        xmlns:properties="clr-namespace:ColorVision.SocketProtocol.Properties"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:SocketManager}"
        Title="{x:Static properties:Resources.SocketManagementWindow}" Height="700" Width="1200" Background="{StaticResource GlobalBackground}" Initialized="Window_Initialized">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部工具栏 -->
        <Grid Grid.Row="0" Margin="5,5,5,5">
            <ToolBarTray IsLocked="True">
                <ToolBar Padding="3,2">
                    <Button Content="{x:Static properties:Resources.Query}" Command="{Binding MessageManager.QueryCommand}" Margin="2,0,0,0"/>
                    <Button Content="{x:Static properties:Resources.AdvancedQuery}" Command="{Binding MessageManager.GenericQueryCommand}" Margin="2,0,0,0"/>
                </ToolBar>
            </ToolBarTray>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Content="{x:Static properties:Resources.OpenDb}" Command="{Binding MessageManager.SelectDbFileCommand}" Height="25" Margin="0,1,5,0"/>
                <Button Command="{Binding MessageManager.MessagesClearCommand}" Padding="2" Height="25" Width="25" Margin="0,1,5,0" ToolTip="{x:Static properties:Resources.ClearMessages}">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleX" To="0.7" Duration="0:0:0.1" AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleY" To="0.7" Duration="0:0:0.1" AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                    <Image Stretch="Uniform" Source="{DynamicResource DrawingImageDelete}" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                        </Image.RenderTransform>
                    </Image>
                </Button>
                <Button Margin="0,1,5,0" HorizontalAlignment="Left" Command="{Binding EditCommand}" Padding="2" Height="25" Width="25" ToolTip="{x:Static properties:Resources.Settings}">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="rotateTransform99" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:0.5" FillBehavior="Stop"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                    <TextBlock Text="&#xE713;" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource GlobalTextBrush}">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="rotateTransform99" CenterX="8" CenterY="8"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- TCP客户端列表(上方，较小) -->
        <GroupBox Grid.Row="1" Header="{x:Static properties:Resources.ConnectedClients}" Margin="5,0,5,5" MaxHeight="150">
            <ListView x:Name="ClientsListView" 
                     Background="Transparent" 
                     ItemsSource="{Binding TcpClients}" 
                     SelectionChanged="ClientsListView_SelectionChanged" 
                     Padding="2">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource ListViewItemBaseStyle}">
                        <Setter Property="ContextMenu" Value="{Binding ContextMenu}"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource GridViewColumnHeaderBase}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn Header="{x:Static properties:Resources.LocalEndPoint}" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Client.LocalEndPoint, Mode=OneWay}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="{x:Static properties:Resources.RemoteEndPoint}" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Client.RemoteEndPoint, Mode=OneWay}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="{x:Static properties:Resources.ConnectionStatus}" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Connected, Mode=OneWay}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        
        <!-- 主内容区域：左侧消息日志，右侧详细信息 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- 消息日志列表(左侧) -->
            <GroupBox Grid.Column="0" Header="{x:Static properties:Resources.MessageLog}" Margin="5,0,0,5">
                <ListView x:Name="MessagesListView" 
                         Background="Transparent" 
                         ItemsSource="{Binding MessageManager.Messages}" 
                         SelectionChanged="MessagesListView_SelectionChanged" 
                         Padding="2"
                         Style="{DynamicResource ListView.Small}">
                    <ListView.Resources>
                        <ContextMenu x:Key="MessageContextMenu">
                            <MenuItem Header="{x:Static properties:Resources.Copy}" Click="CopyMessage_Click" Tag="{Binding .}"/>
                            <MenuItem Header="{x:Static properties:Resources.Resend}" Click="ResendMessage_Click" Tag="{Binding .}"/>
                            <MenuItem Header="{x:Static properties:Resources.Delete}" Click="DeleteMessage_Click" Tag="{Binding .}"/>
                        </ContextMenu>
                    </ListView.Resources>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource ListViewItemBaseStyle.Small}">
                            <Setter Property="ContextMenu" Value="{StaticResource MessageContextMenu}"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource GridViewColumnHeaderBase}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn Header="{x:Static properties:Resources.Time}" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:SocketMessage}">
                                        <TextBlock Text="{Binding MessageTime, StringFormat=HH:mm:ss}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="{x:Static properties:Resources.Direction}" Width="50">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:SocketMessage}">
                                        <TextBlock Text="{Binding Direction}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="{x:Static properties:Resources.Client}" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:SocketMessage}">
                                        <TextBlock Text="{Binding ClientEndPoint}" ToolTip="{Binding ClientEndPoint}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="{x:Static properties:Resources.EventName}" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:SocketMessage}">
                                        <TextBlock Text="{Binding EventName}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="{x:Static properties:Resources.Content}" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:SocketMessage}">
                                        <TextBlock Text="{Binding Content}" TextTrimming="CharacterEllipsis" ToolTip="{Binding Content}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
            
            <!-- 分隔条 -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>
            
            <!-- 消息详细信息(右侧) -->
            <GroupBox Grid.Column="2" Header="{x:Static properties:Resources.MessageDetail}" Margin="0,0,5,5">
                <Grid x:Name="DetailPanel" d:DataContext="{d:DesignInstance local:SocketMessage}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 消息元信息 -->
                    <StackPanel Grid.Row="0" Margin="5">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="{x:Static properties:Resources.Time}" FontWeight="Bold" Width="80"/>
                            <TextBlock Text="{Binding MessageTime, StringFormat=yyyy-MM-dd HH:mm:ss.fff}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="{x:Static properties:Resources.Direction}" FontWeight="Bold" Width="80"/>
                            <TextBlock Text="{Binding Direction}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="{x:Static properties:Resources.Client}" FontWeight="Bold" Width="80"/>
                            <TextBlock Text="{Binding ClientEndPoint}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="{x:Static properties:Resources.EventName}" FontWeight="Bold" Width="80"/>
                            <TextBlock Text="{Binding EventName}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="MsgID:" FontWeight="Bold" Width="80"/>
                            <TextBlock Text="{Binding MsgID}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="{x:Static properties:Resources.ResponseCode}" FontWeight="Bold" Width="80"/>
                            <TextBlock Text="{Binding ResponseCode}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- 消息内容 -->
                    <TextBox Grid.Row="1" Text="{Binding Content, Mode=OneWay}" 
                             IsReadOnly="True" 
                             TextWrapping="Wrap" 
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             BorderThickness="1"
                             Margin="5,0,5,5"
                             FontFamily="Consolas"/>
                    
                    <!-- 操作按钮 -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                        <Button Content="{x:Static properties:Resources.Copy}" Click="CopyContent_Click" Margin="0,0,5,0" Padding="15,5"/>
                        <Button Content="{x:Static properties:Resources.CopyFormatted}" Click="CopyFormattedContent_Click" Margin="0,0,5,0" Padding="15,5"/>
                        <Button Content="{x:Static properties:Resources.Resend}" Click="ResendContent_Click" Margin="0,0,5,0" Padding="15,5"/>
                        <Button Content="{x:Static properties:Resources.Delete}" Click="DeleteContent_Click" Padding="15,5"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
