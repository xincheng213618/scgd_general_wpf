<UserControl x:Class="ColorVision.Engine.Services.Devices.Spectrum.Views.ViewSpectrum"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local ="clr-namespace:ColorVision.Engine.Services.Devices.Spectrum.Views"
             xmlns:vm ="clr-namespace:ColorVision.Common.MVVM;assembly=ColorVision.Common"
             xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:properties ="clr-namespace:ColorVision.Engine.Properties" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:ViewSpectrum}"
             d:DesignHeight="450" d:DesignWidth="800" Background="{DynamicResource BorderBrush}"  Initialized="UserControl_Initialized">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="ToolTip" Value="{ Binding Text,RelativeSource={RelativeSource Self}}"/>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ListCol1" Width="*"/>
            <ColumnDefinition x:Name="ListCol2" Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition x:Name="ListRow1" Height="*"/>
                <RowDefinition x:Name="ListRow2" Height="Auto"/>
            </Grid.RowDefinitions>
            <ScottPlot:WpfPlot  x:Name="wpfplot1" Panel.ZIndex="9" />
            <ScottPlot:WpfPlot  x:Name="wpfplot2" Panel.ZIndex="9" Visibility="Collapsed" />
            <Grid x:Name="Grid1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ToolBarTray Grid.Row="0">
                    <ToolBar>
                        <ToggleButton Click="Button1_Click"  IsChecked="True" Margin="2,0,0,0" >
                            <Image  Stretch="Uniform" Source="{DynamicResource DrawingImageSwitch}" />
                        </ToggleButton>
                        <ToggleButton x:Name="ToggleSpectrumType" Click="ToggleSpectrumType_Click" Margin="2,0,0,0" ToolTip="切换相对/绝对光谱">
                            <TextBlock Text="{x:Static properties:Resources.Relative}" x:Name="SpectrumTypeText"/>
                        </ToggleButton>
                        <Button Content="{x:Static properties:Resources.Inquire}" Click="Inquire_Click" Margin="2,0,0,0"/>
                        <Button x:Name="Search" Content="{x:Static properties:Resources.AdvanceSearch}" Click="SearchAdvanced_Click" Margin="2,0,0,0"/>
                        <Button  Content="{x:Static properties:Resources.Exchange}" Click="Exchange_Click" Margin="2,0,0,0"/>
                    </ToolBar>
                </ToolBarTray>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="光通量模式" Margin="0,0,5,0"/>
                    <ui:ToggleSwitch IsChecked="{Binding DisplayConfig.IsLuminousFluxMode}"  Margin="0,0,5,0"/>
                    <Button Click="Button_Click" Padding="2" Height="25" Width="25" Margin="0,1,5,0">
                        <Rectangle Width="16" Height="16" Fill="{StaticResource DISave}" />
                    </Button>
                    <Button  Click="Button2_Click" Padding="2" Height="25" Width="25" Margin="0,1,5,0" >
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation  Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleX" To="0.7" Duration="0:0:0.1" AutoReverse="True" />
                                        <DoubleAnimation  Storyboard.TargetName="ScaleTransform" Storyboard.TargetProperty="ScaleY" To="0.7" Duration="0:0:0.1" AutoReverse="True" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <Image  Stretch="Uniform" Source="{DynamicResource DrawingImageDelete}" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1" />
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                    <Button Grid.Column="0" Margin="0,1,5,0" Command="{Binding Config.EditCommand}" Padding="2" Height="25" Width="25" >
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="rotateTransform2" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:0.5" FillBehavior="Stop"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <TextBlock Text="&#xE713;"  HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource GlobalTextBrush}">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="rotateTransform2" CenterX="8" CenterY="8"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Button>

                </StackPanel>


                <ListView Height="{Binding Config.Height}" Grid.Row="1" Padding="0,5,5,0"  BorderThickness="0"  x:Name="listView1"  SelectionChanged="listView1_SelectionChanged" Style="{StaticResource ListView.Small}"  PreviewKeyDown="listView1_PreviewKeyDown" >
                    <ListView.Resources>
                        <ContextMenu x:Key="ItemContextMenu" Opened="ContextMenu_Opened"/>
                    </ListView.Resources>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource ListViewItemBaseStyle.Small}">
                            <Setter Property="ContextMenu" Value="{Binding ContextMenu}"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View >
                        <GridView >
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource  GridViewColumnHeaderBase}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}" />
                                    <EventSetter Event="Click" Handler="GridViewColumnSort"/>
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn   Header="{x:Static properties:Resources.SerialNumber1}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{Binding Id}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.CreateTime}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding  CreateTime,StringFormat=yyyy/MM/dd/HH:mm:ss}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.BatchNumber}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{Binding BatchID}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="IntTime">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{Binding IntTime}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="IP" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{Binding IP}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="EQE">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewResultEqe}">
                                        <TextBlock Text="{Binding Eqe, StringFormat={}{0:F4}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="光通量(lm)">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewResultEqe}">
                                        <TextBlock Text="{Binding LuminousFlux, StringFormat={}{0:F4}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="辐射通量(W)" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewResultEqe}">
                                        <TextBlock Text="{Binding RadiantFlux, StringFormat={}{0:F6}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="光效(lm/W)">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewResultEqe}">
                                        <TextBlock Text="{Binding LuminousEfficacy, StringFormat={}{0:F4}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.Lv}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding Lv}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.Blue}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding Blue}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.fx}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding fx}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.fy}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding fy}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.fu}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding fu}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.fv}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding fv}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.CCT}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding fCCT}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.Ld}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding fLd}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.ColorPurityPercent}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding fPur}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.Lp}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding fLp}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.Ra}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding fRa}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.HalfBandwidth}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding fHW}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.V}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding V}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="{x:Static properties:Resources.I}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewResultSpectrum}">
                                        <TextBlock Text="{ Binding I}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            
            </Grid>
            <GridSplitter  Grid.Row="1" Background="#01FFFFFF"  Height="2" Panel.ZIndex="999" HorizontalAlignment="Stretch" VerticalAlignment="Top"  DragCompleted="GridSplitter_DragCompleted"  />
        </Grid>
        <ListView x:Name="listView2"  Grid.Column="1"  Padding="5,5,0,0"  BorderThickness="0" SelectionChanged="listView2_SelectionChanged">
            <ListView.Resources>
                <ContextMenu x:Key="ItemContextMenu" Opened="ContextMenu1_Opened" >
                </ContextMenu>
            </ListView.Resources>
            <ListView.View >
                <GridView >
                    <GridView.ColumnHeaderContainerStyle>
                        <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource  InputElementBaseStyle}">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}" />
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>
                    <GridViewColumn  Header="{x:Static properties:Resources.Wavelength}" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate  DataType="{x:Type local:SpectralData}">
                                <TextBlock Text="{ Binding  Wavelength}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn  Header="{x:Static properties:Resources.RelativeSpectrum}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate  DataType="{x:Type local:SpectralData}">
                                <TextBlock Text="{Binding  RelativeSpectrum, StringFormat={}{0:F4}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn  Header="{x:Static properties:Resources.AbsoluteSpectrum}" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate  DataType="{x:Type local:SpectralData}">
                                <TextBlock Text="{ Binding   AbsoluteSpectrum, StringFormat={}{0:F4}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <GridSplitter  Grid.Column="1"  Background="#1FFFFFFF" Panel.ZIndex="999" Width="2" HorizontalAlignment="Left"   DragCompleted="GridSplitter_DragCompleted1"  />

    </Grid>
</UserControl>
