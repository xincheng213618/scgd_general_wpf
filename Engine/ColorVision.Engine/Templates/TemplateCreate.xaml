<Window x:Class="ColorVision.Engine.Templates.TemplateCreate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Engine.Templates"
        xmlns:properties="clr-namespace:ColorVision.Engine.Properties"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:winf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.Create}" Background="{DynamicResource GlobalBackground}" Height="600" Width="800" Initialized="Window_Initialized">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="ToolTip" Value="{ Binding Text,RelativeSource={RelativeSource Self}}"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxBaseBaseStyle}">
            <EventSetter Event="PreviewKeyDown" Handler="TextBox_PreviewKeyDown"/>
        </Style>
    </Window.Resources>
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background ="{DynamicResource RegionBrush}" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ScrollViewer Grid.Row="0" Margin="2" VerticalScrollBarVisibility="Auto" MaxHeight="150">
                        <WrapPanel x:Name="TemplateStackPanels" Orientation="Horizontal">
                        </WrapPanel>
                    </ScrollViewer>
 
                </Grid>
            </Border>

            <Border Grid.Row="1">
                <StackPanel>
                    <DockPanel Grid.Row="1"  Margin="2" >
                        <hc:ComboBox x:Name="CreateCode" IsEditable="True" SelectedIndex="0"  hc:InfoElement.ShowClearButton="True"   />
                    </DockPanel>
                    <Button Content="{x:Static properties:Resources.Create}" Foreground="White" Background="{StaticResource PrimaryBrush}"  Click="Button_Click" />
                </StackPanel>
            </Border>
        </Grid>
        <Grid Grid.Column="1" Width="400">
            <Grid  x:Name="GridProperty" Margin="3,5">
                <WindowsFormsHost>
                    <winf:PropertyGrid x:Name="PropertyGrid1" />
                </WindowsFormsHost>
            </Grid>
        </Grid>
       
    </Grid>
</Window>
