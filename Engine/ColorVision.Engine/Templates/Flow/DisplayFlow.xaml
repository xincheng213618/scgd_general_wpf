<UserControl x:Class="ColorVision.Engine.Templates.Flow.DisplayFlow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorVision.Engine.Templates.Flow"
             xmlns:properties="clr-namespace:ColorVision.Engine.Properties"
             d:DataContext="{d:DesignInstance local:FlowEngineManager}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300" Width="300" ContextMenu="{Binding ContextMenu}" Initialized="UserControl_Initialized" >
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="ToolTip" Value="{ Binding Text,RelativeSource={RelativeSource Self}}"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Margin="0,0,0,5" >
        <DockPanel>
            <Button DockPanel.Dock="Right"  Command="{Binding Config.EditCommand}" Background="Transparent" BorderThickness="0" Padding="2" Height="20" Width="20"  Margin="0,0,5,0">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="rotateTransform21" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:0.5" FillBehavior="Stop"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
                <TextBlock Text="&#xE713;"  HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource GlobalTextBrush}">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="rotateTransform21" CenterX="8" CenterY="8"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Button>
            <Grid  Margin="0,0">
                <ToggleButton  x:Name="ToggleButton0"  Style="{StaticResource ButtonPageControl1}"   Content="{x:Static properties:Resources.Workflow}"  FontSize="15"  IsChecked="True" />
                <Grid  Height="18"   HorizontalAlignment="Left" MouseLeftButtonDown="Grid_MouseLeftButtonDown" Visibility="{Binding ElementName=ToggleButton0,Path=IsChecked,Converter={StaticResource bool2VisibilityConverter}}" Background="{DynamicResource GlobalBackground}" Margin="2,0,0,0">
                    <Image Source="{DynamicResource DrawingImageFlow}"/>
                </Grid>
            </Grid>
        </DockPanel>

        <Border x:Name="DisPlayBorder" Style="{DynamicResource BorderModuleArea}" Visibility="{Binding ElementName=ToggleButton0,Path=IsChecked,Converter={StaticResource bool2VisibilityConverter}}" >
            <StackPanel Margin="5">
                <DockPanel Margin="0,0,0,5">
                    <Button DockPanel.Dock="Left" Click="Button_Click_Refresh" Background="Transparent"  BorderThickness="0" Padding="3,0" >
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="rotateTransform5" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:0.5" FillBehavior="Stop"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets"  Foreground="{DynamicResource GlobalTextBrush}" FontSize="15" ToolTip="刷新">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="rotateTransform5" CenterX="7.5" CenterY="7.5"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Button>
                    <Button x:Name="ButtonEdit"  DockPanel.Dock="Right" Width="20" Background="Transparent" Padding="0" BorderThickness="0" Command="{Binding EditFlowCommand}">
                        <Image Source="{DynamicResource  DrawingImageEdit}" Width="12" Margin="0" />
                    </Button>
                    <Button DockPanel.Dock="Right"  Command="{Binding EditTemplateFlowCommand}" Background="Transparent" BorderThickness="0" Padding="2" Height="20" Width="20">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="rotateTransform2112" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:0.5" FillBehavior="Stop"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <TextBlock Text="&#xE713;"  HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="{DynamicResource GlobalTextBrush}">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="rotateTransform2112" CenterX="8" CenterY="8"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Button>
                    <ComboBox  x:Name="ComboBoxFlow" SelectedIndex="{Binding TemplateFlowParamsIndex}"  Style="{StaticResource ComboBox.Small}" ItemsSource="{Binding FlowParams}" SelectedValuePath="Value"  DisplayMemberPath="Key" />
                </DockPanel>
                <Grid Margin="0,0,0,5" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ServiceConfig.RegistrationCenterServiceInfo.FileVersion}" Margin="0,0,5,0"/>
                        <TextBlock Text="Ready" Visibility="{Binding Config.IsReady,Converter={StaticResource bool2VisibilityConverter}}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Height="35">
                        <Button Content="{x:Static properties:Resources.ExecutionProcess}"   Visibility="{Binding FlowControl.IsFlowRun,Converter={StaticResource bool2VisibilityConverter1}}" FontWeight="Bold" FontSize="16" Click="Button_FlowRun_Click" />
                        <Button Content="{x:Static properties:Resources.StopProcess}"  Visibility="{Binding FlowControl.IsFlowRun,Converter={StaticResource bool2VisibilityConverter}}"  FontWeight="Bold" FontSize="16" Click="Button_FlowStop_Click" />
                    </StackPanel>
                </Grid>

                <DockPanel Margin="0,0,0,5" Visibility="{Binding Config.IsShowNickName,Converter={StaticResource bool2VisibilityConverter}}" >
                    <CheckBox x:Name="IsName" Content="{x:Static properties:Resources.Alias}" Margin="0,0,20,0"/>
                    <TextBox x:Name="TextBoxName" Style="{StaticResource TextBox.Small}" BorderThickness="0,0,0,1" HorizontalAlignment="Stretch" Margin="0,0,0,0"/>
                </DockPanel>
                <DockPanel >
                    <TextBlock Text="{x:Static properties:Resources.OutputView}" VerticalAlignment="Center" MinWidth="40" Margin="0,0,20,0" />
                    <ComboBox x:Name="ComboxView" Style="{StaticResource ComboBox.Small}"  SelectedValuePath="Value" DisplayMemberPath="Key"/>
                </DockPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
