<Window x:Class="ColorVision.Engine.DisplayAlgorithmManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Engine"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:DisplayAlgorithmManager}"
        xmlns:properties="clr-namespace:ColorVision.Engine.Properties"
        Title="显示算法配置" Height="720" Width="1280"  Background="{DynamicResource GlobalBackground}" Initialized="Window_Initialized">
    <Window.Resources>
        <local:AlgorithmTypeNameConverter x:Key="AlgorithmTypeNameConverter"/>
        <local:AlgorithmTooltipConverter x:Key="AlgorithmTooltipConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="600"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="350" MinWidth="250"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: List and Controls -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <GroupBox Header="创建算法配置" Padding="8" Margin="0 0 0 8" Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="名称:" VerticalAlignment="Center" Margin="0 0 4 0"/>
                    <TextBox Grid.Column="1" Text="{Binding NewMetaName, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Column="2" Text="算法类:" VerticalAlignment="Center" Margin="12 0 4 0"/>
                    <ComboBox Grid.Column="3" ItemsSource="{Binding DisplayAlgorithms}" SelectedItem="{Binding SelectedAlgorithm}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource AlgorithmTypeNameConverter}}" 
                                          ToolTip="{Binding Converter={StaticResource AlgorithmTooltipConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <Button Grid.Column="4" Content="添加" Margin="12 0 0 0" Padding="12 4" Command="{Binding AddMetaCommand}"/>
                </Grid>
            </GroupBox>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 8">
                <Button Content="删除选中" Padding="12 4" Command="{Binding RemoveMetaCommand}"/>
                <Button Content="上移" Padding="12 4" Margin="8 0 0 0" Command="{Binding MoveUpCommand}"/>
                <Button Content="下移" Padding="12 4" Margin="8 0 0 0" Command="{Binding MoveDownCommand}"/>
                <TextBlock Text="  (算法按列表顺序显示)" VerticalAlignment="Center" Margin="12 0 0 0" Foreground="Gray"/>
            </StackPanel>

            <ListView Grid.Row="2" ItemsSource="{Binding AlgorithmMetas}" SelectedItem="{Binding SelectedAlgorithmMeta}" x:Name="lvMetas" SelectionChanged="ListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="序号" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Order}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="名称" Width="150" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="算法类" Width="180" DisplayMemberBinding="{Binding AlgorithmDisplayName}"/>
                        <GridViewColumn Header="分组" Width="120" DisplayMemberBinding="{Binding AlgorithmGroup}"/>
                        <GridViewColumn Header="标签" Width="100" DisplayMemberBinding="{Binding Tag}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        
        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>
        
        <!-- Right Panel: Properties -->
        <Border Grid.Column="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="{DynamicResource GlobalBorderBrush}" CornerRadius="4,4,0,0" Padding="12,8">
                    <DockPanel>
                        <Button DockPanel.Dock="Right" Content="&#xE713;" FontFamily="Segoe MDL2 Assets" 
                                Command="{Binding SelectedAlgorithmMeta.EditConfigCommand}"
                                Visibility="{Binding SelectedAlgorithmMeta.HasConfig, Converter={StaticResource BoolToVisibilityConverter}}"
                                ToolTip="在独立窗口编辑配置"
                                Padding="6,4" Margin="8,0,0,0"/>
                        <TextBlock Text="属性配置" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                    </DockPanel>
                </Border>
                
                <!-- Properties Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
                    <StackPanel x:Name="PropertyPanel">
                        <TextBlock Text="请选择一个算法项查看配置" Foreground="Gray" HorizontalAlignment="Center" Margin="0,20,0,0"
                                   x:Name="PlaceholderText"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
