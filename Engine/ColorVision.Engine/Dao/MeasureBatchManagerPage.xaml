<Page x:Class="ColorVision.Engine.MeasureBatchManagerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorVision.Engine"
             xmlns:properties="clr-namespace:ColorVision.Engine.Properties"
             xmlns:batch="clr-namespace:ColorVision.Engine.Batch"
             d:DataContext="{d:DesignInstance local:MeasureBatchManager}"
             mc:Ignorable="d" 
             Title="{x:Static properties:Resources.IntegratedQuery}"  d:DesignHeight="450" Background="{DynamicResource SecondaryRegionBrush}" d:DesignWidth="1000" Loaded="Page_Loaded" Initialized="UserControl_Initialized">
    <Page.Resources>
        <Style TargetType="TextBlock" >
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}" />
        </Style>
        <batch:TypeNameConverter x:Key="TypeNameConverter"/>
        <batch:ProcessTooltipConverter x:Key="ProcessTooltipConverter"/>
        <batch:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="400"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="320" MinWidth="250"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Batch List -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <DockPanel>
                    <Button  Content="{x:Static properties:Resources.AdvanceSearch}" DockPanel.Dock="Right" Command="{Binding GenericQueryCommand}"  Margin="5,0,0,0"/>
                    <Button  Content="{x:Static properties:Resources.Search}" DockPanel.Dock="Right" Click="Query_Click" Margin="5,0,0,0"/>
                    <TextBox x:Name="SearchBox" BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="0"  VerticalContentAlignment="Center"  VerticalAlignment="Center" Text="" TextChanged="SearchBox_TextChanged"  InputMethod.IsInputMethodEnabled="True"  KeyDown="KeyEnter"  />
                </DockPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button  Content="{x:Static properties:Resources.ArchiveAll}" DockPanel.Dock="Right" Click="Save_Click" Margin="5,0,0,0"/>
                    <Button Command="{Binding Config.EditCommand}"  Padding="2" Height="30" Width="30"  Margin="5,0,0,0">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="rotateTransform2" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:0.5" FillBehavior="Stop"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <TextBlock Text="&#xE713;"  HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="{DynamicResource GlobalTextBrush}"  RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="rotateTransform2" />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Button>

                </StackPanel>
            </Grid>
            <Border  Grid.Row="1"  CornerRadius="10" >
                <ListView x:Name="listView1"  SelectionChanged="listView1_SelectionChanged" Background="Transparent" BorderThickness="0"    MouseDoubleClick="listView1_MouseDoubleClick" >
                    <ListView.Resources>
                        <ContextMenu x:Key="ItemContextMenu" Opened="ContextMenu_Opened" >
                        </ContextMenu>
                    </ListView.Resources>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource ListViewItemBaseStyle.Small}">
                            <Setter Property="ContextMenu" Value="{Binding ContextMenu}"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View >
                        <GridView >
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource  InputElementBaseStyle}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}" />
                                    <EventSetter Event="Click" Handler="GridViewColumnSort"/>
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn  Header="{x:Static properties:Resources.SerialNumber1}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.Id}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="BatchCode">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.Code}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="TId">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.TId}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="FlowStatus">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.FlowStatus}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="TotalTime">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.TotalTime}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="Msg" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.Result}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn  Header="{x:Static properties:Resources.CreateTime}" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.CreateDate, StringFormat=yyyy/MM/dd hh:mm:ss}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

            </Border>
        </Grid>
        
        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>
        
        <!-- Right Panel: Process Execution -->
        <Border Grid.Column="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="{DynamicResource GlobalBorderBrush}" CornerRadius="4,4,0,0" Padding="12,8">
                    <TextBlock Text="后处理执行" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                </Border>
                
                <!-- Process Selection -->
                <StackPanel Grid.Row="1" Margin="10">
                    <TextBlock Text="选择处理类型:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="ProcessComboBox" SelectionChanged="ProcessComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource TypeNameConverter}}" 
                                          ToolTip="{Binding Converter={StaticResource ProcessTooltipConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <TextBlock Text="选中批次:" Margin="0,10,0,5"/>
                    <TextBlock x:Name="SelectedBatchText" Text="未选择" Foreground="Gray"/>
                </StackPanel>
                
                <!-- Config Panel -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="10,0,10,10">
                    <StackPanel x:Name="ProcessConfigPanel">
                        <TextBlock Text="请选择处理类型查看配置" Foreground="Gray" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Execute Button -->
                <Border Grid.Row="3" Padding="10">
                    <Button x:Name="ExecuteButton" Content="执行后处理" Height="35" Click="ExecuteProcess_Click" IsEnabled="False"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
