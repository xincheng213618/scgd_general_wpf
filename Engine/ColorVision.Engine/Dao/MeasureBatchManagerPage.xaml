<Page x:Class="ColorVision.Engine.MeasureBatchManagerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorVision.Engine"
             d:DataContext="{d:DesignInstance local:MeasureBatchManager}"
             mc:Ignorable="d" 
             Title="综合查询"  d:DesignHeight="450" Background="{DynamicResource SecondaryRegionBrush}" d:DesignWidth="800" Loaded="Page_Loaded" Initialized="UserControl_Initialized">
    <Page.Resources>
        <Style TargetType="TextBlock" >
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}" />
        </Style>
    </Page.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <DockPanel>
                    <Button  Content="高级搜索" DockPanel.Dock="Right" Command="{Binding GenericQueryCommand}"  Margin="5,0,0,0"/>
                    <Button  Content="搜索" DockPanel.Dock="Right" Click="Query_Click" Margin="5,0,0,0"/>
                    <TextBox x:Name="SearchBox" BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="0"  VerticalContentAlignment="Center"  VerticalAlignment="Center" Text="" TextChanged="SearchBox_TextChanged"  InputMethod.IsInputMethodEnabled="True"  KeyDown="KeyEnter"  />
                </DockPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button  Content="全部归档" DockPanel.Dock="Right" Click="Save_Click" Margin="5,0,0,0"/>
                    <Button Command="{Binding Config.EditCommand}"  Padding="2" Height="30" Width="30"  Margin="5,0,0,0">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="rotateTransform2" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:0.5" FillBehavior="Stop"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <TextBlock Text="&#xE713;"  HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="{DynamicResource GlobalTextBrush}"  RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="rotateTransform2" />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Button>

                </StackPanel>
            </Grid>
            <Border  Grid.Row="1"  CornerRadius="10" >
                <ListView x:Name="listView1"  SelectionChanged="listView1_SelectionChanged" Background="Transparent" BorderThickness="0"    MouseDoubleClick="listView1_MouseDoubleClick" >
                    <ListView.Resources>
                        <ContextMenu x:Key="ItemContextMenu" Opened="ContextMenu_Opened" >
                        </ContextMenu>
                    </ListView.Resources>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource ListViewItemBaseStyle.Small}">
                            <Setter Property="ContextMenu" Value="{Binding ContextMenu}"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View >
                        <GridView >
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource  InputElementBaseStyle}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}" />
                                    <EventSetter Event="Click" Handler="GridViewColumnSort"/>
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn  Header="序号" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.Id}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="批次号">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.Name}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="TId">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.TId}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="FlowStatus">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.FlowStatus}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="TotalTime">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.TotalTime}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="Msg" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.Result}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="BatchCode">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate  DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.Code}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="测量时间" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewBatchResult}"  >
                                        <TextBlock Text="{Binding MeasureBatchModel.CreateDate, StringFormat=yyyy/dd/MM hh:mm:ss}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn  Header="归档" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type local:ViewBatchResult}">
                                        <Grid>
                                            <TextBlock Text="{Binding MeasureBatchModel.ArchiveStatus}" Visibility="{Binding IshowArch,Converter={StaticResource bool2VisibilityConverter1}}"/>
                                            <Button Content="归档" Click="Arch_Click"  Tag="{Binding .}"/>
                                        </Grid>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

            </Border>
        </Grid>



    </Grid>
</Page>
