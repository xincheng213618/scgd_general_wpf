<Window x:Class="ColorVision.Engine.Batch.BatchProcessManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Engine.Batch"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:BatchManager}"
        xmlns:properties="clr-namespace:ColorVision.Engine.Properties"
        Title="流程处理配置" Height="800" Width="1000" Initialized="Window_Initialized">
    <Window.Resources>
        <local:TypeNameConverter x:Key="TypeNameConverter"/>
        <local:ProcessTooltipConverter x:Key="ProcessTooltipConverter"/>
    </Window.Resources>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="{x:Static properties:Resources.CreateProcessMeta}" Padding="8" Margin="0 0 0 8" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{x:Static properties:Resources.Name}" VerticalAlignment="Center" Margin="0 0 4 0"/>
                <TextBox Grid.Column="1" Text="{Binding NewMetaName, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Column="2" Text="{x:Static properties:Resources.FlowTemplate}" VerticalAlignment="Center" Margin="12 0 4 0"/>
                <ComboBox Grid.Column="3" ItemsSource="{Binding templateModels}" DisplayMemberPath="Key" SelectedItem="{Binding SelectedTemplate}"/>

                <TextBlock Grid.Column="4" Text="处理类:" VerticalAlignment="Center" Margin="12 0 4 0"/>
                <ComboBox Grid.Column="5" ItemsSource="{Binding Processes}" SelectedItem="{Binding SelectedProcess}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource TypeNameConverter}}" 
                                      ToolTip="{Binding Converter={StaticResource ProcessTooltipConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <StackPanel Orientation="Horizontal" Grid.Column="6">
                    <Button  Content="添加" Margin="12 0 0 0" Padding="12 4" Command="{Binding AddMetaCommand}"/>
                    <Button Grid.Column="1" Margin="5,1,5,0" HorizontalAlignment="Left" Command="{Binding BatchConfig.EditCommand}" Padding="2" Height="30" Width="30" >
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="rotateTransform2" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:0.5" FillBehavior="Stop"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                        <TextBlock Text="&#xE713;"  HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" RenderTransformOrigin="0.5,0.5" FontSize="20" Foreground="{DynamicResource GlobalTextBrush}">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="rotateTransform2"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Button>
                </StackPanel>


            </Grid>
        </GroupBox>

        <GroupBox Header="更新 ProcessMeta" Padding="8" Margin="0 0 0 8" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="流程模板:" VerticalAlignment="Center" Margin="0 0 4 0"/>
                <ComboBox Grid.Column="1" ItemsSource="{Binding templateModels}" DisplayMemberPath="Key" SelectedItem="{Binding UpdateTemplate}"/>

                <TextBlock Grid.Column="2" Text="处理类:" VerticalAlignment="Center" Margin="12 0 4 0"/>
                <ComboBox Grid.Column="3" ItemsSource="{Binding Processes}" SelectedItem="{Binding UpdateProcess}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource TypeNameConverter}}" 
                                      ToolTip="{Binding Converter={StaticResource ProcessTooltipConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Grid.Column="4" Content="更新" Margin="12 0 0 0" Padding="12 4" Command="{Binding UpdateMetaCommand}"/>
            </Grid>
        </GroupBox>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0 0 0 8">
            <Button Content="删除选中" Padding="12 4" Command="{Binding RemoveMetaCommand}"/>
            <Button Content="上移" Padding="12 4" Margin="8 0 0 0" Command="{Binding MoveUpCommand}"/>
            <Button Content="下移" Padding="12 4" Margin="8 0 0 0" Command="{Binding MoveDownCommand}"/>
            <TextBlock Text="  (同一流程模板可配置多个处理，按列表顺序依次执行)" VerticalAlignment="Center" Margin="12 0 0 0" Foreground="Gray"/>
        </StackPanel>

        <Grid Grid.Row="3">
            <ListView ItemsSource="{Binding ProcessMetas}" SelectedItem="{Binding SelectedProcessMeta}" x:Name="lvMetas">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="序号" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ExecutionOrder}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="名称" Width="140" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="流程模板" Width="160" DisplayMemberBinding="{Binding TemplateName}"/>
                        <GridViewColumn Header="处理类" Width="180" DisplayMemberBinding="{Binding ProcessDisplayName}"/>
                        <GridViewColumn Header="描述" Width="200" DisplayMemberBinding="{Binding ProcessDescription}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
