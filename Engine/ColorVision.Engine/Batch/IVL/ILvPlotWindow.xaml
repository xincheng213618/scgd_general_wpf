<Window x:Class="ColorVision.Engine.Batch.IVL.ILvPlotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Engine.Batch.IVL"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="IVL Curve Plot" Height="800" Width="1000">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" Width="250" Margin="8">
            <TextBlock Text="Display Mode" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <RadioButton x:Name="RbILv" Content="I-Lv" IsChecked="True" Margin="0,0,16,0" Checked="DisplayMode_Changed" GroupName="DisplayMode"/>
                <RadioButton x:Name="RbVLv" Content="V-Lv" Margin="0,0,16,0" Checked="DisplayMode_Changed" GroupName="DisplayMode"/>
                <RadioButton x:Name="RbIV" Content="I-V" Checked="DisplayMode_Changed" GroupName="DisplayMode"/>
            </StackPanel>
            
            <Separator Margin="0,8,0,12"/>
            
            <TextBlock Text="Plot Mode" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
            <CheckBox x:Name="ChkSortData" Content="Sort Data (Monotonic)" Margin="0,0,0,8" Checked="SortMode_Changed" Unchecked="SortMode_Changed" ToolTip="Uncheck to preserve original measurement sequence for round-trip (hysteresis) visualization"/>
            
            <Separator Margin="0,8,0,12"/>
            
            <TextBlock Text="POI Series" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
            <ListBox x:Name="PoiSeriesList" Height="200" SelectionMode="Multiple" SelectionChanged="PoiSeriesList_SelectionChanged"/>
            <CheckBox x:Name="ChkShowAll" Content="Show All Series" Margin="0,12,0,8" Checked="ChkShowAll_Checked" Unchecked="ChkShowAll_Unchecked"/>
            
            <Separator Margin="0,12,0,12"/>
            
            <Button x:Name="BtnSave" Content="Save Plot" Click="BtnSave_Click" Margin="0,0,0,8"/>
            <Button x:Name="BtnSaveData" Content="Save Data to CSV" Click="BtnSaveData_Click" Margin="0,0,0,8"/>
            <Button x:Name="BtnRefresh" Content="Refresh" Click="BtnRefresh_Click" Margin="0,0,0,8"/>
            
            <Separator Margin="0,12,0,12"/>
            
            <TextBlock Text="Legend" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock x:Name="TxtLegendInfo" TextWrapping="Wrap" FontSize="10"/>
        </StackPanel>
        
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock x:Name="TxtTitle" Text="I-Lv Curve Analysis" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
            
            <ScottPlot:WpfPlot x:Name="wpfPlot" Grid.Row="1"/>
            
            <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="LightGray"/>
            
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Data Table" FontSize="14" FontWeight="Bold" Margin="0,4,0,4"/>
                <DataGrid Grid.Row="1" x:Name="DataGridValues" AutoGenerateColumns="False" IsReadOnly="True"  Style="{StaticResource DataGrid.Small}"
                          CanUserAddRows="False" CanUserDeleteRows="False" AlternatingRowBackground="LightGray">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Series" Binding="{Binding SeriesName}" Width="100"/>
                        <DataGridTextColumn Header="Index" Binding="{Binding Index}" Width="60"/>
                        <DataGridTextColumn Header="Current (mA)" Binding="{Binding Current, StringFormat=F4}" Width="120"/>
                        <DataGridTextColumn Header="Voltage (V)" Binding="{Binding Voltage, StringFormat=F4}" Width="120"/>
                        <DataGridTextColumn Header="Luminance (cd/m²)" Binding="{Binding Luminance, StringFormat=F2}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
