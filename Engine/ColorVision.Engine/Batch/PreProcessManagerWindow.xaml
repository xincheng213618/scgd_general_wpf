<Window x:Class="ColorVision.Engine.Batch.PreProcessManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Engine.Batch"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:PreProcessManager}"
        xmlns:properties="clr-namespace:ColorVision.Engine.Properties"
        Title="预处理配置" Height="720" Width="1280"  Background="{DynamicResource GlobalBackground}" Initialized="Window_Initialized">
    <Window.Resources>
        <local:PreTypeNameConverter x:Key="TypeNameConverter"/>
        <local:PreProcessTooltipConverter x:Key="ProcessTooltipConverter"/>
        <local:PreBoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="600"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="350" MinWidth="250"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: List and Controls -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 8">
                <Button Content="上移" Padding="12 4" Command="{Binding MoveUpCommand}"/>
                <Button Content="下移" Padding="12 4" Margin="8 0 0 0" Command="{Binding MoveDownCommand}"/>
                <TextBlock Text="  所有预处理器已自动创建，启用/禁用通过勾选框控制，同一流程可配置多个预处理按顺序执行" 
                          VerticalAlignment="Center" Margin="12 0 0 0" Foreground="Gray" TextWrapping="Wrap"/>
            </StackPanel>

            <ListView Grid.Row="1" ItemsSource="{Binding ProcessMetas}" SelectedItem="{Binding SelectedProcessMeta}" x:Name="lvMetas" SelectionChanged="ListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="启用" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsEnabled}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="序号" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ExecutionOrder}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="流程模板" Width="120" DisplayMemberBinding="{Binding TemplateName}"/>
                        <GridViewColumn Header="处理类" Width="140" DisplayMemberBinding="{Binding ProcessDisplayName}"/>
                        <GridViewColumn Header="名称" Width="120" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="标签" Width="80" DisplayMemberBinding="{Binding Tag}"/>
                        <GridViewColumn Header="描述" Width="150" DisplayMemberBinding="{Binding ProcessDescription}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        
        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>
        
        <!-- Right Panel: Properties -->
        <Border Grid.Column="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="{DynamicResource GlobalBorderBrush}" CornerRadius="4,4,0,0" Padding="12,8">
                    <DockPanel>
                        <Button DockPanel.Dock="Right" Content="&#xE713;" FontFamily="Segoe MDL2 Assets" 
                                Command="{Binding SelectedProcessMeta.EditConfigCommand}"
                                Visibility="{Binding SelectedProcessMeta.HasConfig, Converter={StaticResource BoolToVisibilityConverter}}"
                                ToolTip="在独立窗口编辑配置"
                                Padding="6,4" Margin="8,0,0,0"/>
                        <TextBlock Text="属性配置" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                    </DockPanel>
                </Border>
                
                <!-- Properties Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
                    <StackPanel x:Name="PropertyPanel">
                        <TextBlock Text="请选择一个预处理项查看配置" Foreground="Gray" HorizontalAlignment="Center" Margin="0,20,0,0"
                                   x:Name="PlaceholderText"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
