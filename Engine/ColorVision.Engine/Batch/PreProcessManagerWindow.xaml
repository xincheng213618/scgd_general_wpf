<Window x:Class="ColorVision.Engine.Batch.PreProcessManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Engine.Batch"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:PreProcessManager}"
        xmlns:properties="clr-namespace:ColorVision.Engine.Properties"
        Title="预处理配置" Height="720" Width="1080"  Background="{DynamicResource GlobalBackground}" Initialized="Window_Initialized">
    <Window.Resources>
        <local:PreTypeNameConverter x:Key="TypeNameConverter"/>
        <local:PreProcessTooltipConverter x:Key="ProcessTooltipConverter"/>
        <local:PreBoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="400"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="350" MinWidth="250"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: List and Controls -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 8">
                <Button Content="上移" Padding="12 4" Command="{Binding MoveUpCommand}"/>
                <Button Content="下移" Padding="12 4" Margin="8 0 0 0" Command="{Binding MoveDownCommand}"/>
                <TextBlock Text="  所有预处理器，在右侧配置启用状态和应用模板" 
                          VerticalAlignment="Center" Margin="12 0 0 0" Foreground="Gray" TextWrapping="Wrap"/>
            </StackPanel>

            <ListView Grid.Row="1" ItemsSource="{Binding Processes}" SelectedItem="{Binding SelectedProcess}" x:Name="lvProcesses" SelectionChanged="ListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="序号" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource TypeNameConverter}, ConverterParameter=Index}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="处理类" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource TypeNameConverter}}" 
                                              ToolTip="{Binding Converter={StaticResource ProcessTooltipConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="描述" Width="*">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource TypeNameConverter}, ConverterParameter=Description}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        
        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>
        
        <!-- Right Panel: Properties -->
        <Border Grid.Column="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="{DynamicResource GlobalBorderBrush}" CornerRadius="4,4,0,0" Padding="12,8">
                    <TextBlock Text="预处理器配置" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                </Border>
                
                <!-- Properties Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
                    <StackPanel x:Name="PropertyPanel">
                        <TextBlock Text="请选择一个预处理器查看配置" Foreground="Gray" HorizontalAlignment="Center" Margin="0,20,0,0"
                                   x:Name="PlaceholderText"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
