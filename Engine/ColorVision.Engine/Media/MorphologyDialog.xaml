<Window x:Class="ColorVision.Engine.Media.MorphologyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="形态学操作" Height="300" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="TitleText" Text="形态学操作" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

        <DockPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="操作" VerticalAlignment="Center" MinWidth="60" Margin="0,0,10,0"/>
            <ComboBox x:Name="OperationCombo" SelectedIndex="0" SelectionChanged="Param_Changed">
                <ComboBoxItem Content="Erode (腐蚀)"/>
                <ComboBoxItem Content="Dilate (膨胀)"/>
                <ComboBoxItem Content="Open (开运算)"/>
                <ComboBoxItem Content="Close (闭运算)"/>
                <ComboBoxItem Content="Gradient (梯度)"/>
                <ComboBoxItem Content="TopHat (顶帽)"/>
                <ComboBoxItem Content="BlackHat (黑帽)"/>
            </ComboBox>
        </DockPanel>

        <DockPanel Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="核大小" VerticalAlignment="Center" MinWidth="60" Margin="0,0,10,0"/>
            <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=KernelSlider, Path=Value, StringFormat=F0}" Width="50" Margin="5,0,0,0"/>
            <hc:PreviewSlider x:Name="KernelSlider"
                              Minimum="1" Maximum="21" Value="3"
                              TickFrequency="2"
                              IsSnapToTickEnabled="True"
                              ValueChanged="Param_Changed"/>
        </DockPanel>

        <DockPanel Grid.Row="3" Margin="0,0,0,8">
            <TextBlock Text="迭代次数" VerticalAlignment="Center" MinWidth="60" Margin="0,0,10,0"/>
            <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=IterSlider, Path=Value, StringFormat=F0}" Width="50" Margin="5,0,0,0"/>
            <hc:PreviewSlider x:Name="IterSlider"
                              Minimum="1" Maximum="10" Value="1"
                              TickFrequency="1"
                              IsSnapToTickEnabled="True"
                              ValueChanged="Param_Changed"/>
        </DockPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="应用" Width="80" Click="Apply_Click" Margin="0,0,10,0"/>
            <Button Content="取消" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
