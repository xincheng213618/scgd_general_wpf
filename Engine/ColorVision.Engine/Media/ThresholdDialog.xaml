<Window x:Class="ColorVision.Engine.Media.ThresholdDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="阈值处理" Height="240" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="阈值处理 (Threshold)" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

        <DockPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="阈值" VerticalAlignment="Center" MinWidth="50" Margin="0,0,10,0"/>
            <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=ThresholdSlider, Path=Value, StringFormat=F0}" Width="50" Margin="5,0,0,0"/>
            <hc:PreviewSlider x:Name="ThresholdSlider"
                              TickFrequency="1"
                              IsSnapToTickEnabled="True"
                              SmallChange="1"
                              LargeChange="10"
                              Value="128"
                              Minimum="0"
                              Maximum="255"
                              ValueChanged="ThresholdSlider_ValueChanged"/>
        </DockPanel>

        <DockPanel Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="最大值" VerticalAlignment="Center" MinWidth="50" Margin="0,0,10,0"/>
            <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=MaxValSlider, Path=Value, StringFormat=F0}" Width="50" Margin="5,0,0,0"/>
            <hc:PreviewSlider x:Name="MaxValSlider"
                              TickFrequency="1"
                              IsSnapToTickEnabled="True"
                              Value="255"
                              Minimum="0"
                              Maximum="255"
                              ValueChanged="ThresholdSlider_ValueChanged"/>
        </DockPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="应用" Width="80" Click="Apply_Click" Margin="0,0,10,0"/>
            <Button Content="取消" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
