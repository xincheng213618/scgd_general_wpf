<Window x:Class="ColorVision.Engine.Media.FilterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="滤波/去噪" Height="340" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="滤波/去噪" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

        <DockPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="类型" VerticalAlignment="Center" MinWidth="60" Margin="0,0,10,0"/>
            <ComboBox x:Name="FilterCombo" SelectedIndex="0" SelectionChanged="Param_Changed">
                <ComboBoxItem Content="GaussianBlur (高斯滤波)"/>
                <ComboBoxItem Content="MedianBlur (中值滤波)"/>
                <ComboBoxItem Content="BilateralFilter (双边滤波)"/>
                <ComboBoxItem Content="Blur (均值滤波)"/>
            </ComboBox>
        </DockPanel>

        <DockPanel Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="核大小" VerticalAlignment="Center" MinWidth="60" Margin="0,0,10,0"/>
            <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=KernelSlider, Path=Value, StringFormat=F0}" Width="50" Margin="5,0,0,0"/>
            <hc:PreviewSlider x:Name="KernelSlider"
                              Minimum="1" Maximum="31" Value="5"
                              TickFrequency="2"
                              IsSnapToTickEnabled="True"
                              ValueChanged="Param_Changed"/>
        </DockPanel>

        <DockPanel Grid.Row="3" x:Name="SigmaPanel" Margin="0,0,0,8">
            <TextBlock Text="Sigma" VerticalAlignment="Center" MinWidth="60" Margin="0,0,10,0"/>
            <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=SigmaSlider, Path=Value, StringFormat=F1}" Width="50" Margin="5,0,0,0"/>
            <hc:PreviewSlider x:Name="SigmaSlider"
                              Minimum="0.1" Maximum="20" Value="1.5"
                              TickFrequency="0.1"
                              IsSnapToTickEnabled="False"
                              ValueChanged="Param_Changed"/>
        </DockPanel>

        <DockPanel Grid.Row="4" x:Name="SigmaColorPanel" Margin="0,0,0,8">
            <TextBlock Text="色彩Sigma" VerticalAlignment="Center" MinWidth="60" Margin="0,0,10,0"/>
            <TextBox DockPanel.Dock="Right" Text="{Binding ElementName=SigmaColorSlider, Path=Value, StringFormat=F0}" Width="50" Margin="5,0,0,0"/>
            <hc:PreviewSlider x:Name="SigmaColorSlider"
                              Minimum="1" Maximum="200" Value="75"
                              TickFrequency="1"
                              IsSnapToTickEnabled="True"
                              ValueChanged="Param_Changed"/>
        </DockPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="应用" Width="80" Click="Apply_Click" Margin="0,0,10,0"/>
            <Button Content="取消" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
