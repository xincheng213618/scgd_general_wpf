<Project>
	<PropertyGroup>
		<SignAssembly>True</SignAssembly>
		<AssemblyOriginatorKeyFile>$(SolutionDir)ColorVision.snk</AssemblyOriginatorKeyFile>
		<Platforms>x64;ARM64</Platforms>
		<PackageTags>ColorVision</PackageTags>
		<EnableNETAnalyzers>true</EnableNETAnalyzers>
		<AnalysisMode>Recommended</AnalysisMode>
		<PlatformTarget>$(Platform)</PlatformTarget>
		<TargetFrameworks>net8.0-windows</TargetFrameworks>
		<NoWarn>CS8002</NoWarn>
		<EnableWindowsTargeting>true</EnableWindowsTargeting>
	</PropertyGroup>
	
	<PropertyGroup>
		<Copyright>Copyright (C) 2025 ColorVision Corporation</Copyright>
		<AssemblyCompany>ColorVision Corp.</AssemblyCompany>
		<AssemblyCopyright>Copyright (C) 2025 ColorVision Corporation</AssemblyCopyright>
		<AssemblyProduct>ColorVision</AssemblyProduct>
		<VersionPrefix>1.3.12.16</VersionPrefix>
		<Company>ColorVision</Company>
		<NeutralLanguage>zh-CN</NeutralLanguage>
		<Authors>xincheng</Authors>
	</PropertyGroup>
</Project>  